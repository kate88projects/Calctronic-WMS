
@section PageHeader {
    <header class="d-flex align-items-center justify-content-between w-100">
        <h2 class="pageTitle">Queue Management</h2>
        <div class="d-flex gap-2">
            <button type="button" class="btn btn-success" onclick="newLoaderForm()">
                Add Hub In
            </button>
            <button type="button" class="btn btn-success" onclick="newJOForm()">
                Add Job Order
            </button>
            <button type="button" class="btn btn-danger" onclick="newEmergencyForm()">
                Add Emergency
            </button>
        </div>
    </header>
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="text-nowrap table-container mt-1">
                        <table id="listTable" class="dataTable row-border hover order-column" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Idx</th>
                                    <th>Doc Type</th>
                                    <th>Doc No</th>
                                    <th>Total Lines</th>
                                    <th>Remark</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="loaderModal" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Loader</h4>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label" for="selLoader">Loader</label>
                    <select class="form-control" id="selLoader"> </select>
                    <div id="selLoaderError" class="error-message"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="saveLoader()">Save</button>
                <button type="button" class="btn btn-outline-secondary" onclick="cancelLoaderForm()">Cancel</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="joModal" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Job Order</h4>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label" for="selJO">Job Order</label>
                    <select class="form-control" id="selJO"> </select>
                    <div id="selJOError" class="error-message"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="saveJO()">Save</button>
                <button type="button" class="btn btn-outline-secondary" onclick="cancelJOForm()">Cancel</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="emModal" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Emergency Order</h4>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label" for="selEmergency">Emergency Order</label>
                    <select class="form-control" id="selEmergency"> </select>
                    <div id="selEmergencyError" class="error-message"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="saveEmergency()">Save</button>
                <button type="button" class="btn btn-outline-secondary" onclick="cancelEmergencyForm()">Cancel</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="qModal" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Loader</h4>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label" for="txtDocNo">Loader / Doc No</label>
                    <input type="text" class="form-control" name="Doc No" id="txtDocNo" aria-describedby="Doc No" disabled>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="txtQ">Queue No</label>
                    <input type="number" class="form-control" name="Q No" id="txtQ" aria-describedby="Q No">
                    <div id="txtQError" class="error-message"></div>
                </div>
                <input type="hidden" id="txtDocId">
                <input type="hidden" id="txtDocType">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="saveQ()">Save</button>
                <button type="button" class="btn btn-outline-secondary" onclick="cancelQForm()">Cancel</button>
            </div>
        </div>
    </div>
</div>

