<style>
    .table-title {
        color: #fff;
        background: #4b5366;
        /*     padding: 16px 25px;
                    margin: -20px -25px 10px; */
        border-radius: 3px 3px 0 0;
    }

        .table-title h2 {
            margin: 5px 0 0;
            font-size: 24px;
        }

    .pnlHide {
        display: none;
    }

    .error-message {
        color: red;
        font-size: 0.875rem;
        margin-top: 5px;
    }

    .is-invalid {
        border-color: red;
    }

    .is-valid {
        border-color: green;
    }

</style>

<br />

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card card-outline ">
                <div class="card-header table-title">
                    <div class="card-title">
                        <h2>User List <b></b></h2>
                    </div>
                    <div class="card-tools">
                        <button type="button" class="btn btn-success" onclick="newItemForm()">
                            Add New User
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table table-striped table-bordered table-responsive text-nowrap">
                        <table id="listTable" class="dt-column-search table table-bordered table-responsive dataTable" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>Fullname</th>
                                    <th>Email</th>
                                    <th>Is Active</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Update User</h4>
            </div>
            @* <form action="/bin/SaveBin" method="post"> *@
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label" for="txtUsername">Username</label>
                    <input type="text" class="form-control" name="Username" id="txtUsername" aria-describedby="Username" maxlength="50">
                    <div id="txtUsernameError" class="error-message"></div>
                </div>

                <div class="mb-3" id="pnlPassword">
                    <label class="form-label" for="txtPassword">Password</label>
                    <input type="password" class="form-control" name="Password" id="txtPassword" aria-describedby="Password" maxlength="50">
                    <div id="txtPasswordError" class="error-message"></div>
                </div>
                <div class="mb-3" id="pnlConfirmPassword">
                    <label class="form-label" for="txtConfirmPassword">Confirm Password</label>
                    <input type="password" class="form-control" name="ConfirmPassword" id="txtConfirmPassword" aria-describedby="ConfirmPassword" maxlength="50">
                    <div id="txtConfirmPasswordError" class="error-message"></div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="txtFullname">Fullname</label>
                    <input type="text" class="form-control" name="Fullname" id="txtFullname" aria-describedby="Fullname" maxlength="255">
                    <div id="txtFullnameError" class="error-message"></div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="txtEmail">Email</label>
                    <input type="text" class="form-control" name="Email" id="txtEmail" aria-describedby="Email" maxlength="50">
                    <div id="txtEmailError" class="error-message"></div>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="chkIsActive">
                    <label class="form-check-label" for="chkIsActive">Is Active</label>
                </div>

                <input type="hidden" id="txtId">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="saveItem()">Save</button>
                <button type="button" class="btn btn-outline-secondary" onclick="cancelForm()">Cancel</button>
            </div>
            @* </form> *@
        </div>
    </div>
</div>

<div class="modal fade" id="myResetModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Update Dimension</h4>
            </div>
            @* <form action="/bin/SaveBin" method="post"> *@
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label" for="txtUsername2">Username</label>
                    <input type="text" class="form-control" name="Username" id="txtUsername2" aria-describedby="Username" disabled>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="txtPassword2">Password</label>
                    <input type="password" class="form-control" name="Password" id="txtPassword2" aria-describedby="Password" maxlength="50">
                    <div id="txtPassword2Error" class="error-message"></div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="txtConfirmPassword2">Confirm Password</label>
                    <input type="password" class="form-control" name="ConfirmPassword" id="txtConfirmPassword2" aria-describedby="ConfirmPassword" maxlength="50">
                    <div id="txtConfirmPassword2Error" class="error-message"></div>
                </div>

                <input type="hidden" id="txtId2">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="resetPassword()">Save</button>
                <button type="button" class="btn btn-outline-secondary" onclick="cancelResetForm()">Cancel</button>
            </div>
            @* </form> *@
        </div>
    </div>
</div>

@section Scripts
{
    <link href="~/css/datatables.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/sweetalert2.min.css">

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/datatables.min.js"></script>
    <script src="~/js/sweetalert2.all.min.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {

            loadList();
        });

        function loadList() {
            $.ajax({
                url: "/Account/GetUserList/",
                type: "GET",
                dataType: 'JSON',
                // data: JSON.stringify(jsonInput),
                contentType: 'application/json; charset=utf-8',
                beforeSend: function () {
                    Swal.fire({
                        text: 'Please Wait',
                        width: '300px',

                        allowEscapeKey: false,
                        allowOutsideClick: false,
                        showConfirmButton: false,
                    });
                    Swal.showLoading();
                },
                success: function (result) {
                    console.log(result);
                    swal.close()
                    if (result.success == true) {
                        $('#listTable').DataTable( {
                            data: result.data,
                            paging: true,
                            pageLength: 50,
                            lengthMenu: [50, 100, 250, 500, 1000],
                            columns: [
                                { data: 'username' },
                                { data: 'fullname' },
                                { data: 'email' },
                                {
                                    data: null,
                                    render: function (data, type, row, meta) {
                                        if (row.isActive == true) {
                                            return '<span><i class="bi bi-check-square" style="color: darkgreen;"></i></span>'
                                        }
                                        else {
                                            return '<span><i class="bi bi-app""></i></span>'
                                        }
                                    }
                                },
                                {
                                    data: null,
                                    render: function (data, type, row, meta) {
                                        const rowData = JSON.stringify(row).replace(/"/g, "&quot;");
                                        return `<div style="display:flex;"><button class="btn btn-success d-grid edit-btn" style="margin-right:10px;" data-row="${rowData}">
                                        <span><i class="bi bi-pencil-square""></i>  Edit</span></button>
                                        <button class="btn btn-success d-grid edit-Pass-btn" style="margin-right:10px;" data-row="${rowData}">
                                        <span><i class="bi bi-lock""></i>  Reset Password</span></button>
                                        <button class="btn btn-danger deactivate-account delete-btn" data-id="${row.id}" data-code="${row.username}"><span><i class="bi bi-trash""></i>  Delete</span></button></div>`;

                                        // return '<div style="display:flex;"><button class="btn btn-success d-grid" style="margin-right:10px;"' +
                                        // 'onclick="editItemForm(\'' + row.id + '\', ' +
                                        // '\'' + row.username + '\', \'' + row.fullname + '\', \'' + row.email + '\', \'' + row.isActive + '\' )">' +
                                        // '<span><i class="bi bi-pencil-square""></i>  Edit</span></button>' +

                                        // '<button class="btn btn-warning d-grid" style="margin-right:10px;"' +
                                        // 'onclick="resetPassForm(\'' + row.id + '\', \'' + row.username + '\')">' +
                                        // '<span><i class="bi bi-lock""></i>  Reset Password</span></button>' +

                                        // '<button class="btn btn-danger deactivate-account" onclick="deleteItem(\'' + row.id + '\')"><span><i class="bi bi-trash""></i>  Delete</span></button></div>';
                                    }
                                }
                            ],
                        });



                    }
                    else {
                        swal.fire({
                            icon: 'error',
                            title: "Wait",
                            text: result.errMessage
                        });
                    }
                },
                error: function (error) {
                    swal.fire({
                        icon: 'error',
                        title: "Wait",
                        text: error.val
                    });
                }
            });
        }

        function newItemForm() {
            removeErrMsg([]);
            $("#txtId").val("");
            $("#txtUsername").val("");
            $("#txtPassword").val("");
            $("#txtConfirmPassword").val("");
            $("#txtFullname").val("");
            $("#txtEmail").val("");
            document.getElementById("chkIsActive").checked = true;
            $("#myModal").modal("show");

            $('#pnlPassword').removeClass('pnlHide');
            $('#pnlConfirmPassword').removeClass('pnlHide');
        }

        $('#listTable').on('click', '.edit-btn', function () {
            const row = JSON.parse($(this).attr('data-row'));
            editItemForm(row);
        });

        function editItemForm(row) {
            removeErrMsg([]);
            $("#txtId").val(row.id);
            $("#txtUsername").val(row.username);
            $("#txtPassword").val("");
            $("#txtConfirmPassword").val("");
            $("#txtFullname").val(row.fullname);
            $("#txtEmail").val(row.email);
            if (row.isActive == true) {
                document.getElementById("chkIsActive").checked = true;
            }
            else {
                document.getElementById("chkIsActive").checked = false;
            }
            $('#pnlPassword').addClass('pnlHide');
            $('#pnlConfirmPassword').addClass('pnlHide');
            $("#myModal").modal("show");
        }

        $('#listTable').on('click', '.edit-Pass-btn', function () {
            const row = JSON.parse($(this).attr('data-row'));
            resetPassForm(row);
        });

        function resetPassForm(row) {
            removeErrMsg2([]);
            $("#txtId2").val(row.id);
            $("#txtUsername2").val(row.username);
            $("#txtPassword2").val("");
            $("#txtConfirmPassword2").val("");
            $("#myResetModal").modal("show");
        }

        function cancelForm() {
            $("#myModal").modal("toggle");
        }

        function cancelResetForm() {
            $("#myResetModal").modal("toggle");
        }

        function removeErrMsg2(fields, clearValue = false) {
            fields = [ 'txtPassword2', 'txtConfirmPassword2' ];
            if (!Array.isArray(fields)) {
                fields = [fields];
            }

            fields.forEach(function(field) {
                document.getElementById(field).classList.remove('is-invalid');
                document.getElementById(field).classList.remove('is-valid');
                document.getElementById(field + 'Error').textContent = '';
                if (clearValue) document.getElementById(field).value = '';
            });
        }

        function checkInput2() {
            let isValid = true;
            if ($("#txtPassword2").val() == "") {
                showError("txtPassword2", `Please enter Password.`);
                isValid = false;
            }

            if ($("#txtConfirmPassword2").val() == "") {
                showError("txtConfirmPassword2", `Please enter Confirm Password.`);
                isValid = false;
            }

            if ($("#txtPassword2").val() != $("#txtConfirmPassword2").val()) {
                err = "Password and Confirm Password are not match.";
                showError("#txtPassword2", err);
                isValid = false;
                showError("#txtConfirmPassword2", err);
                isValid = false;
            }
            return isValid;
        }

        function resetPassword() {
            removeErrMsg2([]);
            if (checkInput2() == false) {
                return;
            }

            var data = {
                Id: $("#txtId2").val(),
                Username: $("#txtUsername2").val(),
                Password: $("#txtPassword2").val(),
                ConfirmPassword: $("#txtConfirmPassword2").val(),
                Fullname: '',
                Email: ''
            }

            //console.log(JSON.stringify(data));

            $.ajax({
                url: '/Account/ResetUserPassword',
                type: 'POST',
                data: JSON.stringify(data),
                dataType: 'JSON',
                contentType: 'application/json; charset=utf-8',
                beforeSend: function () {
                    Swal.fire({
                        text: 'Please Wait',
                        width: '300px',

                        allowEscapeKey: false,
                        allowOutsideClick: false,
                        showConfirmButton: false,
                    });
                    Swal.showLoading();
                },
                success: function (result) {
                    // console.log(result);
                    if (result.success == true) {
                        // $("#myModal").modal("toggle");
                        swal.fire({
                            icon: 'success',
                            title: "Success Update",
                            text: "",
                            didClose: () => {
                              window.location.reload();
                            }
                        });
                    }
                    else {
                        swal.fire({
                            icon: 'error',
                            title: "Wait",
                            text: result.errMessage
                        });
                    }
                },
                error: function (error) {
                    console.log(error);
                    swal.fire({
                        icon: 'error',
                        title: "Wait",
                        text: error.val
                    });
                }
            });

            // console.log(id);
        }

        // Show error message and highlight invalid fields
        function showError(fieldId, message) {
            document.getElementById(fieldId).classList.add('is-invalid');
            document.getElementById(fieldId + 'Error').textContent = message;
        }

        function removeErrMsg(fields, clearValue = false) {
            fields = ['txtUsername', 'txtPassword', 'txtConfirmPassword', 'txtFullname', 'txtEmail' ];
            if (!Array.isArray(fields)) {
                fields = [fields];
            }

            fields.forEach(function(field) {
                document.getElementById(field).classList.remove('is-invalid');
                document.getElementById(field).classList.remove('is-valid');
                document.getElementById(field + 'Error').textContent = '';
                if (clearValue) document.getElementById(field).value = '';
            });
        }

        function checkInput() {
            let isValid = true;
            var txt = document.getElementById("txtUsername");
            if (txt.value == "") {
                showError(txt.id, `Please enter Username.`);
                isValid = false;
            }
            if ($("#txtId").val() == "") {
                if ($("#txtPassword").val() == "") {
                    showError("txtPassword", `Please enter Password.`);
                    isValid = false;
                }

                if ($("#txtConfirmPassword").val() == "") {
                    showError("txtConfirmPassword", `Please enter Confirm Password.`);
                    isValid = false;
                }

                if ($("#txtPassword").val() != $("#txtConfirmPassword").val()) {
                    err = "Password and Confirm Password are not match.";
                    showError("txtPassword", err);
                    isValid = false;
                    showError("txtConfirmPassword", err);
                    isValid = false;
                }
            }
            txt = document.getElementById("txtFullname");
            if (txt.value == "") {
                showError(txt.id, `Please enter Fullname.`);
                isValid = false;
            }
            txt = document.getElementById("txtEmail");
            if (txt.value == "") {
                showError(txt.id, `Please enter Email.`);
                isValid = false;
            }
            return isValid;
        }

        function saveItem() {
            removeErrMsg([]);
            if (checkInput() == false) {
                return;
            }

            const chkIsAct = document.querySelector('#chkIsActive');

            var data = {
                Id: $("#txtId").val(),
                Username: $("#txtUsername").val(),
                Password: $("#txtPassword").val(),
                ConfirmPassword: $("#txtConfirmPassword").val(),
                Fullname: $("#txtFullname").val(),
                Email: $("#txtEmail").val(),
                IsActive: chkIsAct.checked ? true : false
            }

            //console.log(JSON.stringify(data));

            $.ajax({
                url: '/Account/SaveUser',
                type: 'POST',
                data: JSON.stringify(data),
                dataType: 'JSON',
                contentType: 'application/json; charset=utf-8',
                beforeSend: function () {
                    Swal.fire({
                        text: 'Please Wait',
                        width: '300px',

                        allowEscapeKey: false,
                        allowOutsideClick: false,
                        showConfirmButton: false,
                    });
                    Swal.showLoading();
                },
                success: function (result) {
                    // console.log(result);
                    if (result.success == true) {
                        $("#myModal").modal("toggle");
                        swal.fire({
                            icon: 'success',
                            title: "Success Update",
                            text: "",
                            didClose: () => {
                              window.location.reload();
                            }
                        });
                    }
                    else {
                        swal.fire({
                            icon: 'error',
                            title: "Wait",
                            text: result.errMessage
                        });
                    }
                },
                error: function (error) {
                    console.log(error);
                    swal.fire({
                        icon: 'error',
                        title: "Wait",
                        text: error.val
                    });
                }
            });

            // console.log(id);
        }

        $('#listTable').on('click', '.delete-btn', function () {
                const id = $(this).attr('data-id');
                const code = $(this).attr('data-code');
                deleteItem(id, code);
        });

        function deleteItem(id, code) {

            swal.fire({
                title: "Are you sure want to delete?",
                text: "You will not be able to recover this record!",
                inputAttributes: {
                    autocapitalize: 'off'
                },
                showCancelButton: true,
                confirmButtonText: 'ok',
                cancelButtonText: 'cancel',
                allowOutsideClick: false
              }).then(function(r) {
                if (r.isConfirmed == true) {

                    var data = {
                        Id: id,
                    }

                    $.ajax({
                        url: '/Account/DeleteUser',
                        type: 'DELETE',
                        data: JSON.stringify(data),
                        dataType: 'json',
                        contentType: 'application/json; charset=utf-8',
                        beforeSend: function () {
                            Swal.fire({
                                text: 'Please Wait',
                                width: '300px',

                                allowEscapeKey: false,
                                allowOutsideClick: false,
                                showConfirmButton: false,
                            });
                            Swal.showLoading()
                        },
                        success: function (result) {
                            if (result.success == true) {
                                swal.fire({
                                    icon: 'success',
                                    title: "Success Deleted",
                                    text: "",
                                    didClose: () => {
                                      window.location.reload();
                                    }
                                });
                            }
                            else {
                                swal.fire({
                                    icon: 'error',
                                    title: "Wait",
                                    text: result.errMessage
                                });
                            }
                        },
                        error: function (error) {
                            console.log(error);
                            swal.fire({
                                icon: 'error',
                                title: "Wait",
                                text: error.val
                            });
                        }
                    });

                } else {
                    return;
                }
              });

        }

    </script>
}
