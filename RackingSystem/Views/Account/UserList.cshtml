@section Scripts
{
    @* <link href="~/css/datatables.min.css" rel="stylesheet"> *@
    <link rel="stylesheet" href="~/css/gridjs.min.css">
    <link rel="stylesheet" href="~/css/sweetalert2.min.css">

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* <script src="~/js/datatables.min.js"></script> *@
    <script src="~/js/sweetalert2.all.min.js"></script>
    <script src="~/js/gridjs.umd.js"></script>

    <script type="text/javascript">

        let gridInstance = null;

        $(document).ready(function () {
            loadList();
        });

        function loadList() {
            $.ajax({
                url: "/Account/GetUserList/",
                type: "GET",
                dataType: 'JSON',
                // data: JSON.stringify(jsonInput),
                contentType: 'application/json; charset=utf-8',
                beforeSend: function () {
                    Swal.fire({
                        text: 'Please Wait',
                        width: '300px',

                        allowEscapeKey: false,
                        allowOutsideClick: false,
                        showConfirmButton: false,
                    });
                    Swal.showLoading();
                },
                success: function (result) {
                    console.log(result);
                    swal.close()
                    if (result.success == true) {
                        /*
                        $('#listTable').DataTable( {
                            data: result.data,
                            paging: true,
                            pageLength: 50,
                            lengthMenu: [50, 100, 250, 500, 1000],
                            columns: [
                                { data: 'username' },
                                { data: 'fullname' },
                                { data: 'email' },
                                {
                                    data: null,
                                    render: function (data, type, row, meta) {
                                        if (row.isActive == true) {
                                            return '<span><i class="bi bi-check-square" style="color: darkgreen;"></i></span>'
                                        }
                                        else {
                                            return '<span><i class="bi bi-app""></i></span>'
                                        }
                                    }
                                },
                                {
                                    data: null,
                                    render: function (data, type, row, meta) {
                                        const rowData = JSON.stringify(row).replace(/"/g, "&quot;");
                                        return `<div style="display:flex;"><button class="btn btn-success d-grid edit-btn" style="margin-right:10px;" data-row="${rowData}">
                                        <span><i class="bi bi-pencil-square""></i>  Edit</span></button>
                                        <button class="btn btn-success d-grid edit-Pass-btn" style="margin-right:10px;" data-row="${rowData}">
                                        <span><i class="bi bi-lock""></i>  Reset Password</span></button>
                                        <button class="btn btn-danger deactivate-account delete-btn" data-id="${row.id}" data-code="${row.username}"><span><i class="bi bi-trash""></i>  Delete</span></button></div>`;

                                    }
                                }
                            ],
                        });*/

                        if (gridInstance) {
                            gridInstance.destroy();
                        }

                         gridInstance = new gridjs.Grid({
                            columns: [
                                { name: 'Username', id: 'username' },
                                { name: 'Fullname', id: 'fullname' },
                                { name: 'Email', id: 'email' },
                                { 
                                    name: 'Active State', 
                                    id: 'isActive',
                                    formatter: (cell, row) => {
                                        return row.cells[3].data === true
                                          ? gridjs.html('<span class="badge rounded-pill bg-success">Active</span>')
                                          : gridjs.html('<span class="badge rounded-pill bg-secondary">InActive</span>');
                                    }
                                },
                                { name: 'Id', id: 'id', hidden: true },
                                { 
                                    name: 'Action',
                                    formatter: (cell, row) => {
                                        const cleanRow = {
                                            username: row.cells[0]?.data,
                                            fullname: row.cells[1]?.data,
                                            email: row.cells[2]?.data,
                                            isActive: row.cells[3]?.data,
                                            id: row.cells[4]?.data,
                                        };
                                        const rawData = btoa(JSON.stringify(cleanRow));
                                        return gridjs.html(`
                                            <div style="display:flex;">
                                                <button class="btn btn-success d-grid edit-btn" style="margin-right:10px;" data-row="${rawData}">
                                                    <span><i class="bi bi-pencil-square""></i>  Edit</span>
                                                </button>
                                                <button class="btn btn-success d-grid edit-Pass-btn" style="margin-right:10px;" data-row="${rawData}">
                                                    <span><i class="bi bi-lock""></i>  Reset Password</span>
                                                </button>
                                                <button class="btn btn-danger deactivate-account delete-btn" data-id="${cleanRow.id}" data-code="${cleanRow.username}">
                                                    <span><i class="bi bi-trash""></i>  Delete</span>
                                                </button>
                                            </div>
                                        `)
                                    }
                                },
                            ],
                            data: result.data,
                            pagination: true,
                            search: true,
                            sort: true,
                            resizable: true,
                            className: {
                                table: 'custom-table',
                            }
                         }).render(document.getElementById("gridTable"));

                         //remove grid-footer class
                        const footer = document.querySelector('#gridTable .gridjs-footer');
                        if (footer) {
                            footer.id = "gridFooter";
                        }
                        document.getElementById("gridFooter").classList.remove("gridjs-footer");
                    }
                    else {
                        swal.fire({
                            icon: 'error',
                            title: "Wait",
                            text: result.errMessage
                        });
                    }
                },
                error: function (error) {
                    swal.fire({
                        icon: 'error',
                        title: "Wait",
                        text: error.val
                    });
                }
            });
        }

        function newItemForm() {
            removeErrMsg([]);
            $("#txtId").val("");
            $("#txtUsername").val("");
            $("#txtPassword").val("");
            $("#txtConfirmPassword").val("");
            $("#txtFullname").val("");
            $("#txtEmail").val("");
            document.getElementById("chkIsActive").checked = true;
            $("#myModal").modal("show");

            $('#pnlPassword').removeClass('pnlHide');
            $('#pnlConfirmPassword').removeClass('pnlHide');
        }

        $('#gridTable').on('click', '.edit-btn', function () {
            const row = JSON.parse(atob($(this).attr('data-row')));
            console.log("row", row);
            editItemForm(row);
        });

        function editItemForm(row) {
            removeErrMsg([]);
            $("#txtId").val(row.id);
            $("#txtUsername").val(row.username);
            $("#txtPassword").val("");
            $("#txtConfirmPassword").val("");
            $("#txtFullname").val(row.fullname);
            $("#txtEmail").val(row.email);
            if (row.isActive == true) {
                document.getElementById("chkIsActive").checked = true;
            }
            else {
                document.getElementById("chkIsActive").checked = false;
            }
            $('#pnlPassword').addClass('pnlHide');
            $('#pnlConfirmPassword').addClass('pnlHide');
            $("#myModal").modal("show");
        }

        $('#gridTable').on('click', '.edit-Pass-btn', function () {
            const row = JSON.parse(atob($(this).attr('data-row')));
            resetPassForm(row);
        });

        function resetPassForm(row) {
            removeErrMsg2([]);
            $("#txtId2").val(row.id);
            $("#txtUsername2").val(row.username);
            $("#txtPassword2").val("");
            $("#txtConfirmPassword2").val("");
            $("#myResetModal").modal("show");
        }

        function cancelForm() {
            $("#myModal").modal("toggle");
        }

        function cancelResetForm() {
            $("#myResetModal").modal("toggle");
        }

        function removeErrMsg2(fields, clearValue = false) {
            fields = [ 'txtPassword2', 'txtConfirmPassword2' ];
            if (!Array.isArray(fields)) {
                fields = [fields];
            }

            fields.forEach(function(field) {
                document.getElementById(field).classList.remove('is-invalid');
                document.getElementById(field).classList.remove('is-valid');
                document.getElementById(field + 'Error').textContent = '';
                if (clearValue) document.getElementById(field).value = '';
            });
        }

        function checkInput2() {
            let isValid = true;
            if ($("#txtPassword2").val() == "") {
                showError("txtPassword2", `Please enter Password.`);
                isValid = false;
            }

            if ($("#txtConfirmPassword2").val() == "") {
                showError("txtConfirmPassword2", `Please enter Confirm Password.`);
                isValid = false;
            }

            if ($("#txtPassword2").val() != $("#txtConfirmPassword2").val()) {
                err = "Password and Confirm Password are not match.";
                showError("#txtPassword2", err);
                isValid = false;
                showError("#txtConfirmPassword2", err);
                isValid = false;
            }
            return isValid;
        }

        function resetPassword() {
            removeErrMsg2([]);
            if (checkInput2() == false) {
                return;
            }

            var data = {
                Id: $("#txtId2").val(),
                Username: $("#txtUsername2").val(),
                Password: $("#txtPassword2").val(),
                ConfirmPassword: $("#txtConfirmPassword2").val(),
                Fullname: '',
                Email: ''
            }

            $.ajax({
                url: '/Account/ResetUserPassword',
                type: 'POST',
                data: JSON.stringify(data),
                dataType: 'JSON',
                contentType: 'application/json; charset=utf-8',
                beforeSend: function () {
                    Swal.fire({
                        text: 'Please Wait',
                        width: '300px',

                        allowEscapeKey: false,
                        allowOutsideClick: false,
                        showConfirmButton: false,
                    });
                    Swal.showLoading();
                },
                success: function (result) {
                    // console.log(result);
                    if (result.success == true) {
                        // $("#myModal").modal("toggle");
                        swal.fire({
                            icon: 'success',
                            title: "Success Update",
                            text: "",
                            didClose: () => {
                              window.location.reload();
                            }
                        });
                    }
                    else {
                        swal.fire({
                            icon: 'error',
                            title: "Wait",
                            text: result.errMessage
                        });
                    }
                },
                error: function (error) {
                    console.log(error);
                    swal.fire({
                        icon: 'error',
                        title: "Wait",
                        text: error.val
                    });
                }
            });

            // console.log(id);
        }

        // Show error message and highlight invalid fields
        function showError(fieldId, message) {
            document.getElementById(fieldId).classList.add('is-invalid');
            document.getElementById(fieldId + 'Error').textContent = message;
        }

        function removeErrMsg(fields, clearValue = false) {
            fields = ['txtUsername', 'txtPassword', 'txtConfirmPassword', 'txtFullname', 'txtEmail' ];
            if (!Array.isArray(fields)) {
                fields = [fields];
            }

            fields.forEach(function(field) {
                document.getElementById(field).classList.remove('is-invalid');
                document.getElementById(field).classList.remove('is-valid');
                document.getElementById(field + 'Error').textContent = '';
                if (clearValue) document.getElementById(field).value = '';
            });
        }

        function checkInput() {
            let isValid = true;
            var txt = document.getElementById("txtUsername");
            if (txt.value == "") {
                showError(txt.id, `Please enter Username.`);
                isValid = false;
            }
            if ($("#txtId").val() == "") {
                if ($("#txtPassword").val() == "") {
                    showError("txtPassword", `Please enter Password.`);
                    isValid = false;
                }

                if ($("#txtConfirmPassword").val() == "") {
                    showError("txtConfirmPassword", `Please enter Confirm Password.`);
                    isValid = false;
                }

                if ($("#txtPassword").val() != $("#txtConfirmPassword").val()) {
                    err = "Password and Confirm Password are not match.";
                    showError("txtPassword", err);
                    isValid = false;
                    showError("txtConfirmPassword", err);
                    isValid = false;
                }
            }
            txt = document.getElementById("txtFullname");
            if (txt.value == "") {
                showError(txt.id, `Please enter Fullname.`);
                isValid = false;
            }
            txt = document.getElementById("txtEmail");
            if (txt.value == "") {
                showError(txt.id, `Please enter Email.`);
                isValid = false;
            }
            return isValid;
        }

        function saveItem() {
            removeErrMsg([]);
            if (checkInput() == false) {
                return;
            }

            const chkIsAct = document.querySelector('#chkIsActive');

            var data = {
                Id: $("#txtId").val(),
                Username: $("#txtUsername").val(),
                Password: $("#txtPassword").val(),
                ConfirmPassword: $("#txtConfirmPassword").val(),
                Fullname: $("#txtFullname").val(),
                Email: $("#txtEmail").val(),
                IsActive: chkIsAct.checked ? true : false
            }

            //console.log(JSON.stringify(data));

            $.ajax({
                url: '/Account/SaveUser',
                type: 'POST',
                data: JSON.stringify(data),
                dataType: 'JSON',
                contentType: 'application/json; charset=utf-8',
                beforeSend: function () {
                    Swal.fire({
                        text: 'Please Wait',
                        width: '300px',

                        allowEscapeKey: false,
                        allowOutsideClick: false,
                        showConfirmButton: false,
                    });
                    Swal.showLoading();
                },
                success: function (result) {
                    // console.log(result);
                    if (result.success == true) {
                        $("#myModal").modal("toggle");
                        swal.fire({
                            icon: 'success',
                            title: "Success Update",
                            text: "",
                            didClose: () => {
                              window.location.reload();
                            }
                        });
                    }
                    else {
                        swal.fire({
                            icon: 'error',
                            title: "Wait",
                            text: result.errMessage
                        });
                    }
                },
                error: function (error) {
                    console.log(error);
                    swal.fire({
                        icon: 'error',
                        title: "Wait",
                        text: error.val
                    });
                }
            });

            // console.log(id);
        }

        $('#gridTable').on('click', '.delete-btn', function () {
                const id = $(this).attr('data-id');
                const code = $(this).attr('data-code');
                deleteItem(id, code);
        });

        function deleteItem(id, code) {

            swal.fire({
                title: "Are you sure want to delete?",
                text: "You will not be able to recover this record!",
                inputAttributes: {
                    autocapitalize: 'off'
                },
                showCancelButton: true,
                confirmButtonText: 'ok',
                cancelButtonText: 'cancel',
                allowOutsideClick: false
              }).then(function(r) {
                if (r.isConfirmed == true) {

                    var data = {
                        Id: id,
                    }

                    $.ajax({
                        url: '/Account/DeleteUser',
                        type: 'DELETE',
                        data: JSON.stringify(data),
                        dataType: 'json',
                        contentType: 'application/json; charset=utf-8',
                        beforeSend: function () {
                            Swal.fire({
                                text: 'Please Wait',
                                width: '300px',

                                allowEscapeKey: false,
                                allowOutsideClick: false,
                                showConfirmButton: false,
                            });
                            Swal.showLoading()
                        },
                        success: function (result) {
                            if (result.success == true) {
                                swal.fire({
                                    icon: 'success',
                                    title: "Success Deleted",
                                    text: "",
                                    didClose: () => {
                                      window.location.reload();
                                    }
                                });
                            }
                            else {
                                swal.fire({
                                    icon: 'error',
                                    title: "Wait",
                                    text: result.errMessage
                                });
                            }
                        },
                        error: function (error) {
                            console.log(error);
                            swal.fire({
                                icon: 'error',
                                title: "Wait",
                                text: error.val
                            });
                        }
                    });

                } else {
                    return;
                }
              });

        }

    </script>
}
