@section Scripts
{
    <link href="~/css/datatables.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/sweetalert2.min.css">

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/datatables.min.js"></script>
    <script src="~/js/sweetalert2.all.min.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            var now = new Date();

            var day = ("0" + now.getDate()).slice(-2);
            var month = ("0" + (now.getMonth() + 1)).slice(-2);

            var today = now.getFullYear()+"-"+(month)+"-"+(day) ;

            $('#dtpDateFrom').val(today);
            $('#dtpDateTo').val(today);

            loadList(1);
        });

        function loadList(page) {
            // console.log('start');

            var data = {
                GRNBatchNo: $("#txtGRN").val(),
                ItemCode: $("#txtItemCode").val(),
                ReelCode: $("#txtReelCode").val(),
                DateType: $("#selDateType").val(),
                DateFrom: $("#dtpDateFrom").val(),
                DateTo: $("#dtpDateTo").val(),
                page: page,
                pageSize: $("#selpageSize").val(),
            }

            $.ajax({
                url: "/GRN/GetGRNDetailList/",
                type: "POST",
                data: JSON.stringify(data),
                dataType: 'JSON',
                contentType: 'application/json; charset=utf-8',
                beforeSend: function () {
                    Swal.fire({
                        text: 'Please Wait',
                        width: '300px',

                        allowEscapeKey: false,
                        allowOutsideClick: false,
                        showConfirmButton: false,
                    });
                    Swal.showLoading()
                },
                success: function (result) {
                    console.log(result);
                    swal.close()
                    if (result.success == true) {
                        $('#listTable').DataTable( {
                            data: result.data,
                            paging: false,
                            searching: false,
                            "info": false,
                            pageLength: $("#selpageSize").val(),
                            "bDestroy": true,
                            // lengthMenu: [50, 100, 250, 500, 1000],
                            columns: [
                                { data: 'grnBatchNo' },
                                {
                                    data: null,
                                    render: function (data, type, row, meta) {
                                        // return '<p>' + row.itemCode + '</p><p>' + row.itemDesc + '</p>';
                                        return '<p style="margin:0;"><span>' + row.itemCode + '</span><br/>' +
                                        '<span style="font-size:13px;color:grey;">' + row.itemDesc + '</span></p>';
                                    }
                                },
                                { data: 'qty' },
                                { data: 'reelCode' },
                                {
                                    data: null,
                                    render: function (data, type, row, meta) {
                                        if (row.createdDateDisplay == row.updatedDateDisplay) {
                                            return '<p style="margin:0;">' + row.createdDateDisplay + '</p>';
                                        }
                                        else {
                                            return '<p style="margin:0;"><span>' + row.updatedDateDisplay + '</span><br/>' +
                                            '<span style="font-size:13px;color:grey;">' + row.createdDateDisplay + '</span></p>';
                                        }
                                        // return '<p>' + row.createdDateDisplay + '</p><p>' + row.updatedDateDisplay + '</p>';
                                    }
                                },
                                {
                                    data: null,
                                    render: function (data, type, row, meta) {
                                        return '<div style="display:flex;"><button class="btn btn-success d-grid" style="margin-right:10px;" onclick="editBinForm(\'' + row.bin_Id + '\', \'' + row.binCode + '\', \'' + row.colNo + '\', \'' + row.rowNo + '\', \'' + row.isActive + '\')"><span><i class="bi bi-pencil-square""></i>  Edit</span></button>' +
                                                '<button class="btn btn-danger deactivate-account" onclick="deleteBin(\'' + row.bin_Id + '\', \'' + row.binCode + '\')"><span><i class="bi bi-trash""></i>  Delete</span></button></div>';
                                    }
                                }
                            ],
                        });

                        if (result.totalRecords >= 0) {
                            $('#lblCurCount').html($("#selpageSize").val());
                            $('#lblTotal').html(result.totalRecords);
                        }

                    }
                    else {
                        swal.fire({
                            icon: 'error',
                            title: "Wait",
                            text: result.errMessage
                        });
                    }
                },
                error: function (error) {
                    swal.fire({
                        icon: 'error',
                        title: "Wait",
                        text: error.val
                    });
                }
            });
        }


    </script>
}
