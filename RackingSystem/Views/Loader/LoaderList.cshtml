        function newItemForm() {
            removeErrMsg([]);
            $("#txtId").val("0");
            // $("#txtCode").val("");
            // $("#txtDesc").val("");
            // $("#txtTotalCol").val("");
            // $("#txtColHeight").val("");
            // $("#txtIPAddr").val("");
            const fields = ['#txtCode', '#txtDesc', '#txtTotalCol', '#txtColHeight', '#txtIPAddr'];
            fields.forEach(i => $(i).val(''));

            document.getElementById("chkIsActive").checked = true;
            $("#myModal").modal("show");
        }

        $('#gridTable').on('click', '.edit-btn', function () {
            const row = JSON.parse(atob($(this).attr('data-row')));
            editItemForm(row);
        });

        function editItemForm(row) {
            removeErrMsg([]);
            $("#txtId").val(row.loader_Id);
            $("#txtCode").val(row.loaderCode);
            $("#txtDesc").val(row.description);
            $("#txtTotalCol").val(row.totalCol);
            $("#txtColHeight").val(row.colHeight);
            $("#txtIPAddr").val(row.ipAddr);
            if (row.isActive == true) {
                document.getElementById("chkIsActive").checked = true;
            }
            else {
                document.getElementById("chkIsActive").checked = false;
            }
            $("#myModal").modal("show");
        }

        function cancelForm() {
            $("#myModal").modal("toggle");
        }


        // Show error message and highlight invalid fields
        function showError(fieldId, message) {
            document.getElementById(fieldId).classList.add('is-invalid');
            document.getElementById(fieldId + 'Error').textContent = message;
        }

        function removeErrMsg(fields, clearValue = false) {
            fields = ['txtCode', 'txtDesc', 'txtTotalCol', 'txtColHeight', 'txtIPAddr' ];
            if (!Array.isArray(fields)) {
                fields = [fields];
            }

            fields.forEach(function(field) {
                document.getElementById(field).classList.remove('is-invalid');
                document.getElementById(field).classList.remove('is-valid');
                document.getElementById(field + 'Error').textContent = '';
                if (clearValue) document.getElementById(field).value = '';
            });
        }

        function checkInput() {
            let isValid = true;
            var txt = document.getElementById("txtCode");
            if (txt.value == "") {
                showError(txt.id, `Please enter Auto Loader Code.`);
                isValid = false;
            }
            // txt = document.getElementById("txtDesc");
            txt = document.getElementById("txtTotalCol");
            if (txt.value == "") {
                showError(txt.id, `Please enter Total Column.`);
                isValid = false;
            }
            txt = document.getElementById("txtColHeight");
            if (txt.value == "") {
                showError(txt.id, `Please enter Column Height.`);
                isValid = false;
            }
            txt = document.getElementById("txtIPAddr");
            if (txt.value == "") {
                showError(txt.id, `Please enter IP Address.`);
                isValid = false;
            }
            return isValid;
        }

        function saveItem() {
            removeErrMsg([]);
            if (checkInput() == false) {
                return;
            }

            const chkIsAct = document.querySelector('#chkIsActive');
            var data = {
                Loader_Id: $("#txtId").val(),
                LoaderCode: $("#txtCode").val(),
                Description: $("#txtDesc").val(),
                TotalCol: $("#txtTotalCol").val(),
                ColHeight: $("#txtColHeight").val(),
                IPAddr: $("#txtIPAddr").val(),
                IsActive: chkIsAct.checked ? true : false,
            }

            $.ajax({
                url: '/Loader/SaveLoader',
                type: 'POST',
                data: JSON.stringify(data),
                dataType: 'JSON',
                contentType: 'application/json; charset=utf-8',
                beforeSend: function () {
                    Swal.fire({
                        text: 'Please Wait',
                        width: '300px',
                        allowEscapeKey: false,
                        allowOutsideClick: false,
                        showConfirmButton: false,
                    });
                    Swal.showLoading();
                },
                success: function (result) {
                    if (result.success == true) {
                        $("#myModal").modal("toggle");
                        swal.fire({
                            icon: 'success',
                            title: "Success Update",
                            text: "",
                            didClose: () => {
                              window.location.reload();
                            }
                        });
                    }
                    else {
                        swal.fire({
                            icon: 'error',
                            title: "Wait",
                            text: result.errMessage
                        });
                    }
                },
                error: function (error) {
                    swal.fire({
                        icon: 'error',
                        title: "Wait",
                        text: error.val
                    });
                }
            });
        }

        $('#gridTable').on('click', '.delete-btn', function () {
            const id = $(this).attr('data-id');
            const code = $(this).attr('data-code');
            deleteItem(id, code);
        });

        function deleteItem(id, code) {
            swal.fire({
                title: "Are you sure want to delete?",
                text: "You will not be able to recover this record!",
                inputAttributes: {
                    autocapitalize: 'off'
                },
                showCancelButton: true,
                confirmButtonText: 'ok',
                cancelButtonText: 'cancel',
                allowOutsideClick: false
            }).then(function(r) {
                if (r.isConfirmed == true) {

                    var data = {
                        Loader_Id: id,
                        LoaderCode: code
                    }
                    console.log(data);

                    $.ajax({
                        url: '/Loader/DeleteLoader',
                        type: 'DELETE',
                        data: JSON.stringify(data),
                        dataType: 'json',
                        contentType: 'application/json; charset=utf-8',
                        beforeSend: function () {
                            Swal.fire({
                                text: 'Please Wait',
                                width: '300px',

                                allowEscapeKey: false,
                                allowOutsideClick: false,
                                showConfirmButton: false,
                            });
                            Swal.showLoading();
                        },
                        success: function (result) {
                            if (result.success == true) {
                                // $("#myModal").modal("toggle");
                                swal.fire({
                                    icon: 'success',
                                    title: "Success Deleted",
                                    text: "",
                                    didClose: () => {
                                      window.location.reload();
                                    }
                                });
                            }
                            else {
                                swal.fire({
                                    icon: 'error',
                                    title: "Wait",
                                    text: result.errMessage
                                });
                            }
                        },
                        error: function (error) {
                            swal.fire({
                                icon: 'error',
                                title: "Wait",
                                text: error.val
                            });
                        }
                    });

                } else {
                    return;
                }
            });
        }

    </script>
}
