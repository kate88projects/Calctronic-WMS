                       if (gridInstance) {
                           gridInstance.destroy();
                       }

                       gridInstance = new gridjs.Grid({
                           columns: [
                               { name: 'Auto Loader Code', id: 'loaderCode', width: '188px' },
                               { name: 'Description', id: 'description', width: '148px' },
                               {
                                   name: 'Active State',
                                   id: 'isActive',
                                   width: '140px',
                                   formatter: (cell, row) => {
                                        const badgeHtml = row.cells[2].data === true
