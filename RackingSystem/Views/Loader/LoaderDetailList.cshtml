@section Scripts
{
    <link rel="stylesheet" href="~/css/sweetalert2.min.css">
    <link rel="stylesheet" href="~/css/dataTables.dataTables.css">
    <link rel="stylesheet" href="~/css/columnControl.dataTables.css">

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="../js/dataTables.js"></script>
    <script src="../js/dataTables.columnControl.js"></script>
    <script src="../js/columnControl.dataTables.js"></script>
    <script src="~/js/sweetalert2.all.min.js"></script>

    <script type="text/javascript">
        let globalData = [];
        let activeCol = null;

        $(document).ready(function () {
            loadLoader();
        });
        
        function loadLoader() {
            $.ajax({
                url: "/Loader/GetLoaderList/",
                type: "POST",
                dataType: 'JSON',
                contentType: 'application/json; charset=utf-8',
                success: function (result) {
                    swal.close();
                    if (result.success == true) {
                        const dropdown = document.getElementById('selLoader');
                        dropdown.innerHTML = "";

                        result.data.forEach((i, index) => {
                            const option = document.createElement("option");
                            option.value = i.loader_Id;
                            option.textContent = i.loaderCode;
                            if (index === 0) {
                                option.selected = true;
                            }
                            dropdown.appendChild(option);
                        });

                        loadList();
                    }
                },
                error: function (error) {
                    swal.fire({
                        icon: 'error',
                        title: "Wait",
                        text: error.val
                    });
                }
            });
        }

        function loadList() {
            const id = document.getElementById("selLoader").value;

            $.ajax({
                url: "/Loader/GetLoaderDetailList?id=" + id,
                type: "GET",
                dataType: 'JSON',
                contentType: 'application/json; charset=utf-8',
                beforeSend: function () {
                    Swal.fire({
                        text: 'Please Wait',
                        width: '300px',
                        allowEscapeKey: false,
                        allowOutsideClick: false,
                        showConfirmButton: false,
                    });
                    Swal.showLoading();
                },
                success: function (result) {
                    swal.close();
                    if (result.success == true) {
                        var spText = result.errStackTrace.split(',');
                        console.log(result.data);
                        globalData = result.data;
                        // document.getElementById('txtCol1').innerHTML = "Usage Col 1 : " + spText[0];
                        // document.getElementById('txtCol2').innerHTML = "Usage Col 2 : " + spText[1];
                        // document.getElementById('txtCol3').innerHTML = "Usage Col 3 : " + spText[2];
                        // document.getElementById('txtCol4').innerHTML = "Usage Col 4 : " + spText[3];

                        document.getElementById('txtTR1').innerHTML = spText[4] + (spText[4] > 1 ? " reels" : " reel");
                        document.getElementById('txtTR2').innerHTML = spText[5] + (spText[5] > 1 ? " reels" : " reel");
                        document.getElementById('txtTR3').innerHTML = spText[6] + (spText[6] > 1 ? " reels" : " reel");
                        document.getElementById('txtTR4').innerHTML = spText[7] + (spText[7] > 1 ? " reels" : " reel");

                        document.getElementById('txtStatus').innerHTML = spText[8];

                        //filter out the duplicate reel-id
                        const dup = new Set();
                        const filteredData = result.data.filter(row => {
                            if (dup.has(row.reelCode) || row.reel_Id == "00000000-0000-0000-0000-000000000000") {
                                return false;
                            }
                            console.log(row);
                            dup.add(row.reelCode);
                            return true;
                        });

                        console.log("filteredData", filteredData);

                        $('#listTable').DataTable( {
                            data: filteredData,
                            paging: true,
                            pageLength: 50,
                            lengthMenu: [50, 100, 250, 500, 1000],
                            "bDestroy": true,
                            columns: [
                                { data: 'colNo' },
                                { data: 'reelCode' },
                                {
                                    data: null,
                                    render: function (data, type, row, meta) {
                                        // return '<p>' + row.itemCode + '</p><p>' + row.itemDesc + '</p>';
                                        return '<p style="margin:0;"><span>' + row.itemCode + '</span><br/>' +
                                        '<span style="font-size:13px;color:grey;">' + row.itemDesc + '</span></p>';
                                    }
                                },
                                { data: 'qty' },
                            ],
                            language: {
                                searchPlaceholder: "🔍︎ Search",
                                search: ""
                            },
                            ordering: {
                                indicators: false
                            },
                            columnControl: ['orderStatus']
                        });

                        
                        const usageData = filterColumnUsage(result.data);
                        $('.usage-card').each(function() {
                            const col = $(this).data('col');
                            const colData = usageData[col];

                            if (!colData) return;
                            $(this).find('[data-type="balanced"]').text(colData.balanced);
                            $(this).find('[data-type="used"]').text(colData.used);
                            $(this).find('[data-type="total"]').text(colData.total);
                        });
                    }
                    else {
                        swal.fire({
                            icon: 'error',

                            title: "Wait",
                            text: result.errMessage
                        });
                    }
                },
                error: function (error) {
                    swal.fire({
                        icon: 'error',
                        title: "Wait",
                        text: error.val
                    });
                }
            });
        }

        function filterColumnUsage(data) {
            const usage = {};

            data.forEach(row => {
                const col = row.colNo;
                if (!usage[col]) {
                    usage[col] = {
                        total: row.colHeight + " mm",
                        balanced: row.balanceHeight + " mm",
                        used: row.colHeight - row.balanceHeight + " mm"
                    };
                }
            });

            for (let col = 1; col <= 4; col++) {
                if (!usage[col]) {
                    usage[col] = {
                        total: "50 mm",
                        balanced: "50 mm",
                        used: "0 mm"
                    };
                }
            }
            return usage;
        }

        // function filterByColumn(colNumber) {
        //     const table = $('#listTable').DataTable();
        //     table.column(0).search('').draw();

        //     const filteredData = globalData.filter(row => row.colNo == colNumber);
        //     table.clear();
        //     table.rows.add(filteredData);
        //     table.draw();
        // }

        $('.col-reel-btn').on('click', function() {
            const col = $(this).data('col');
            const table = $('#listTable').DataTable();

            if (activeCol === col) {
                activeCol = null;

                $('.col-reel-btn').removeClass('active');
                table.clear();
                table.rows.add(globalData);
                table.draw();
                return;
            }

            activeCol = col;
            $('.col-reel-btn').removeClass('active');
            $(this).addClass('active');

            const filteredData = globalData.filter(x => x.colNo == col && x.qty != 0);
            table.clear();
            table.rows.add(filteredData);
            table.draw();
        });


    </script>
}