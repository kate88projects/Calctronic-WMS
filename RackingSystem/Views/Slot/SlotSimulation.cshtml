@section Scripts
{
    <link href="~/css/datatables.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/sweetalert2.min.css">

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/datatables.min.js"></script>
    <script src="~/js/sweetalert2.all.min.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            $('#txtCol').val(1);
            loadList();
        });

        function loadList() {
            var col = $('#txtCol').val();
            $.ajax({
                url: "/Slot/GetSlotStatus_ByColumn?req=" + col,
                type: "GET",
                dataType: 'JSON',
                // data: JSON.stringify(jsonInput),
                contentType: 'application/json; charset=utf-8',
                beforeSend: function () {
                    Swal.fire({
                        text: 'Please Wait',
                        width: '300px',

                        allowEscapeKey: false,
                        allowOutsideClick: false,
                        showConfirmButton: false,
                    });
                    Swal.showLoading()
                },
                success: function (result) {
                    // console.log(result);
                    swal.close();
                    if (result.success == true) {

                        var idx = 1;
                        for (let iC = 1; iC <= 4; iC++) {
                            const tbl = document.getElementById('list' + iC + 'Table');
                            const tableBody = document.getElementById('list' + iC + 'TableBody');
                            tableBody.innerHTML = '';

                            for (let i = 0; i < 25; i++) { // Example: Add 5 rows
                                const newRow = tbl.insertRow(); // or document.createElement('tr');
                                const cell1 = newRow.insertCell(); // or document.createElement('td');
                                cell1.innerHTML = '<a style="font-size:10px;" ' +
                                'href="javascript:updateForm(\'' + result.data[idx - 1].slot_Id + '\',\'' + result.data[idx - 1].rowNo + '\',\'' + result.data[idx - 1].isActive + '\', ' +
                                '\'' + result.data[idx - 1].forEmptyDrawer + '\',\'' + result.data[idx - 1].hasEmptyDrawer + '\',\'' + result.data[idx - 1].hasReel + '\',\'' + result.data[idx - 1].reelNo + '\',)" >' + result.data[idx - 1].rowNo + '</a>';
                                $(cell1).addClass("tblRow tblCol1");
                                const cell2 = newRow.insertCell(); // or document.createElement('td');
                                if (result.data[idx - 1].hasReel) {
                                    if (result.data[idx - 1].reelNo == 0) {
                                        cell2.innerHTML = '<img src="../assets/img/tray_full_icon_138077.png" style="display:flex;justify-self: center; height:25px;" />';
                                    }
                                    else {
                                        cell2.innerHTML = '<span style="display:flex;justify-self: center; font-size:15px;">2</span>';
                                    }
                                }
                                else {
                                    if (result.data[idx - 1].hasEmptyDrawer) {
                                        cell2.innerHTML = '<img src="../assets/img/tray_icon_136086.png" style="display:flex;justify-self: center;width:25px;height:25px;" />';
                                    }
                                    else {
                                        cell2.innerHTML = '';
                                    }
                                }
                                $(cell2).addClass("tblRow tblCol2");
                                const cell3 = newRow.insertCell(); // or document.createElement('td');
                                if (result.data[idx - 1].isActive) {
                                    cell3.innerHTML = '<span style="font-size:10px;color:lightgreen;"><i class="bi-circle-fill"></i></span>';
                                }
                                else {
                                    cell3.innerHTML = '<span style="font-size:10px;color:red;"><i class="bi-exclamation-circle-fill"></i></span>';
                                }
                                if (result.data[idx - 1].forEmptyDrawer) {
                                        cell3.innerHTML = cell3.innerHTML + '<img src="../assets/img/lock.png" style="width:12px;height:12px;" />';
                                }
                                else {
                                    // cell3.innerHTML = '<span style="font-size:10px;color:red;"><i class="bi-exclamation-circle-fill"></i></span>';
                                }
                                $(cell3).addClass("tblRow tblCol3");

                                idx = idx + 1;
                            }
                        }

                    }
                    else {
                        swal.fire({
                            icon: 'error',
                            title: "Wait",
                            text: result.errMessage
                        });
                    }
                },
                error: function (error) {
                    swal.fire({
                        icon: 'error',
                        title: "Wait",
                        text: error.val
                    });
                }
            });

        }

        function simulateResult() {

            var data = {
                ColNo: $("#txtCol").val(),
                TotalSlot: $("#txtTotalRow").val(),
                SortExp: 'row1 asc',
            };

            $.ajax({
                url: "/Slot/GetFreeSlot_ByColumn_ASC",
                type: "POST",
                dataType: 'JSON',
                data: JSON.stringify(data),
                contentType: 'application/json; charset=utf-8',
                beforeSend: function () {
                    Swal.fire({
                        text: 'Please Wait',
                        width: '300px',

                        allowEscapeKey: false,
                        allowOutsideClick: false,
                        showConfirmButton: false,
                    });
                    Swal.showLoading()
                },
                success: function (result) {
                    console.log(result);
                    swal.close();
                    if (result.success == true) {
                          const myDiv = document.getElementById('txtResult');
                          myDiv.innerHTML = result.data.row1 + ' || ' + result.data.row2 + ' || ' + result.data.row3 + ' || ' + result.data.row4;

                    }
                    else {
                        swal.fire({
                            icon: 'error',
                            title: "Wait",
                            text: result.errMessage
                        });
                    }
                },
                error: function (error) {
                    swal.fire({
                        icon: 'error',
                        title: "Wait",
                        text: error.val
                    });
                }
            });

        }

        function simulateResultDesc() {

            var data = {
                ColNo: $("#txtCol").val(),
                TotalSlot: $("#txtTotalRow").val(),
                SortExp: '',
            };

            $.ajax({
                url: "/Slot/GetFreeSlot_ByColumn_DESC",
                type: "POST",
                dataType: 'JSON',
                data: JSON.stringify(data),
                contentType: 'application/json; charset=utf-8',
                beforeSend: function () {
                    Swal.fire({
                        text: 'Please Wait',
                        width: '300px',

                        allowEscapeKey: false,
                        allowOutsideClick: false,
                        showConfirmButton: false,
                    });
                    Swal.showLoading()
                },
                success: function (result) {
                    console.log(result);
                    swal.close();
                    if (result.success == true) {
                          const myDiv = document.getElementById('txtResult');
                          myDiv.innerHTML = result.data.row1 + ' || ' + result.data.row2 + ' || ' + result.data.row3 + ' || ' + result.data.row4;

                    }
                    else {
                        swal.fire({
                            icon: 'error',
                            title: "Wait",
                            text: result.errMessage
                        });
                    }
                },
                error: function (error) {
                    swal.fire({
                        icon: 'error',
                        title: "Wait",
                        text: error.val
                    });
                }
            });

        }

        function updateForm(id, rowno, isAct, forET, hasET, hasR, reelNo) {
            $("#txtId").val(id);
            $("#txtRowNo").val(rowno);
            if (isAct == "true") {
                document.getElementById("chkIsActive").checked = true;
            }
            else {
                document.getElementById("chkIsActive").checked = false;
            }
            if (forET == "true") {
                document.getElementById("chkForEmptyTray").checked = true;
            }
            else {
                document.getElementById("chkForEmptyTray").checked = false;
            }
            if (hasET == "true") {
                document.getElementById("chkHasEmptyTray").checked = true;
            }
            else {
                document.getElementById("chkHasEmptyTray").checked = false;
            }
            if (hasR == "true") {
                document.getElementById("chkHasReel").checked = true;
            }
            else {
                document.getElementById("chkHasReel").checked = false;
            }
            $("#txtReelNo").val(reelNo);
            $("#myModal").modal("show");
        }

        function updateSlotStatus() {
            const chkIsAct = document.querySelector('#chkIsActive');
            const chkForEmptyTray = document.querySelector('#chkForEmptyTray');
            const chkHasEmptyTray = document.querySelector('#chkHasEmptyTray');
            const chkHasReel = document.querySelector('#chkHasReel');

            var data = {
                Slot_Id: $("#txtId").val(),
                IsActive: chkIsAct.checked ? true : false,
                ForEmptyDrawer: chkForEmptyTray.checked ? true : false,
                HasEmptyDrawer: chkHasEmptyTray.checked ? true : false,
                HasReel: chkHasReel.checked ? true : false,
                ReelNo: $("#txtReelNo").val(),
                RowNo: $("#txtRowNo").val(),
            }

            //console.log(JSON.stringify(data));

            $.ajax({
                url: '/Slot/UpdateSlotStatus',
                type: 'POST',
                data: JSON.stringify(data),
                dataType: 'JSON',
                contentType: 'application/json; charset=utf-8',
                beforeSend: function () {
                    Swal.fire({
                        text: 'Please Wait',
                        width: '300px',

                        allowEscapeKey: false,
                        allowOutsideClick: false,
                        showConfirmButton: false,
                    });
                    Swal.showLoading()
                },
                success: function (result) {
                    // console.log(result);
                    if (result.success == true) {
                        $("#myModal").modal("toggle");
                        swal.fire({
                            icon: 'success',
                            title: "Success Update",
                            text: "",
                            didClose: () => {
                              window.location.reload();
                            }
                        });
                    }
                    else {
                        swal.fire({
                            icon: 'error',
                            title: "Wait",
                            text: result.errMessage
                        });
                    }
                },
                error: function (error) {
                    console.log(error);
                    swal.fire({
                        icon: 'error',
                        title: "Wait",
                        text: error.val
                    });
                }
            });

            // console.log(id);
        }

        function cancelForm() {
            $("#myModal").modal("toggle");
        }


    </script>
}
