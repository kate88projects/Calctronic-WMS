                <input type="hidden" id="txtId">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="updateSlotStatus()">Update</button>
                <button type="button" class="btn btn-outline-secondary" onclick="cancelForm()">Cancel</button>
            </div>
            @* </form> *@
        </div>
    </div>
</div>

@section Scripts
{
    <link href="~/css/datatables.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/sweetalert2.min.css">

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/datatables.min.js"></script>
    <script src="~/js/sweetalert2.all.min.js"></script>

    <script type="text/javascript">

        var autoTimer;
        var runningTask = false;
        var endTask = true;
        let token = '';

        function delay(ms) {
            return new Promise(resolve => setTimeout(resolve, ms));
        }

        $(document).ready(function () {
            const startBtn = document.getElementById('start-btn');
            const stopBtn = document.getElementById('stop-btn');
            startBtn.disabled = false;
            stopBtn.disabled = true;

            token = $('#xToken').val();

            $('#txtCol').val(1);
            $('#txtRow').val(1);
            loadList();
        });

        function loadList() {
            var col = $('#txtCol').val();
            $.ajax({
                url: "/Slot/GetSlotStatus_ByColumn?req=" + col,
                type: "GET",
                dataType: 'JSON',
                // data: JSON.stringify(jsonInput),
                contentType: 'application/json; charset=utf-8',
                beforeSend: function () {
                    Swal.fire({
                        text: 'Please Wait',
                        width: '300px',

                        allowEscapeKey: false,
                        allowOutsideClick: false,
                        showConfirmButton: false,
                    });
                    Swal.showLoading()
                },
                success: function (result) {
                    // console.log(result);
                    swal.close();
                    if (result.success == true) {

                        var idx = 1;
                        for (let iC = 1; iC <= 5; iC++) {
                            const tbl = document.getElementById('list' + iC + 'Table');
                            const tableBody = document.getElementById('list' + iC + 'TableBody');
                            tableBody.innerHTML = '';

                            for (let i = 0; i < 25; i++) { // Example: Add 5 rows
                                if (idx >= 111) { continue; }
                                const rawData = JSON.stringify(result.data[idx - 1]);
                                const newRow = tbl.insertRow(); // or document.createElement('tr');
                                const cell1 = newRow.insertCell(); // or document.createElement('td');
                                cell1.innerHTML = `<a style="font-size:10px;"
                                href='javascript:none;' id='btnUpdate' data-row='${rawData}' > ` + result.data[idx - 1].rowNo + '</a>';
                                $(cell1).addClass("tblRow tblCol1");
                                const cell2 = newRow.insertCell();
                                cell2.id = "R" + (111 - idx);
                                cell2.innerHTML = '' + result.data[idx - 1].qrxPulse + ' , ' + result.data[idx - 1].qryPulse + '';
                                $(cell2).addClass("tblRow tblCol2");
                                const cell3 = newRow.insertCell(); // or document.createElement('td');
                                if (result.data[idx - 1].isActive) {
                                    cell3.innerHTML = '<span style="font-size:10px;color:lightgreen;"><i class="bi-circle-fill"></i></span>';
                                }
                                else {
                                    cell3.innerHTML = '<span style="font-size:10px;color:red;"><i class="bi-exclamation-circle-fill"></i></span>';
                                }
                                if (result.data[idx - 1].forEmptyTray) {
                                        cell3.innerHTML = cell3.innerHTML + '<img src="../assets/img/lock.png" style="width:12px;height:12px;" />';
                                }
                                else {
                                    // cell3.innerHTML = '<span style="font-size:10px;color:red;"><i class="bi-exclamation-circle-fill"></i></span>';
                                }
                                $(cell3).addClass("tblRow tblCol3");

                                idx = idx + 1;
                            }
                        }

                    }
                    else {
                        swal.fire({
                            icon: 'error',
                            title: "Wait",
                            text: result.errMessage
                        });
                    }
                },
                error: function (error) {
                    swal.fire({
                        icon: 'error',
                        title: "Wait",
                        text: error.val
                    });
                }
            });

        }

        function logMessage(message, type = 'info') {
            const logContainer = document.getElementById('system-log');
            if (!logContainer) return;

            const timestamp = new Date().toLocaleTimeString();
            const logEntry = document.createElement('div');
            logEntry.classList.add('log-entry', `log-${type}`);
            logEntry.textContent = `[${timestamp}] ${message}`;

            logContainer.appendChild(logEntry);

            logContainer.scrollTop = logContainer.scrollHeight;
        }

        function clearLog() {
            const logContainer = document.getElementById('system-log');
            if (logContainer) {
                logContainer.innerHTML = '';
                logMessage("Log cleared by operator.", 'alert');
            }
        }

        function getQRPulses() {
            const startBtn = document.getElementById('start-btn');
            const stopBtn = document.getElementById('stop-btn');
            startBtn.disabled = true;
            stopBtn.disabled = false;

            endTask = false;
            runningTask = false;
            autoTimer = setInterval(getPulsesAuto, 2000);
        }

        function stopGet() {
            const startBtn = document.getElementById('start-btn');
            const stopBtn = document.getElementById('stop-btn');
            startBtn.disabled = false;
            stopBtn.disabled = true;

            endTask = true;
            clearInterval(autoTimer);
            return;
        }

        function stop() {
            const startBtn = document.getElementById('start-btn');
            const stopBtn = document.getElementById('stop-btn');
            startBtn.disabled = false;
            stopBtn.disabled = true;

            runningTask = false;
            endTask = true;
            clearInterval(autoTimer);
            return;
        }

        async function getPulsesAuto() {
            if (endTask == true) { return; }
            if (runningTask == true) { return; }

            var iCol = Number($('#txtCol').val());
            var rowFrom = Number($('#txtRow').val());


            if (rowFrom >= 111) {
                console.log('RF:111');
                $('#txtRow').val(110);
                stop();
                return;
            }

            runningTask = true;
            var r = await startScanPulses(iCol, rowFrom);
            if (r == false) {
                r = await startScanPulses(iCol, rowFrom);
                if (r == false) {
                    stop();
                    return;
                }
            }

            await delay(1000);

            if (r == true) {
                var r2 = await readPulses(iCol, rowFrom);
                if (r2 == false) {
                    r2 = await readPulses(iCol, rowFrom);
                    if (r2 == false) {
                        stop();
                        return;
                    }
                }
            }
            runningTask = false;

            const chkCont = document.getElementById('chkCont');
            if (chkCont.checked == false) {
                console.log('chkCont');
                stop();
                return;
            }
        }

        async function startScanPulses(iCol, rowFrom) {
            var fResult = false;

            if (rowFrom >= 111) {
                return false;
            }

            await $.ajax({
                url: "/api/PLCSlot/SetScanPulseStart/" + iCol + "/" + rowFrom,
                type: "GET",
                headers: {
                    'Authorization': 'Bearer ' + token
                },
                dataType: 'JSON',
                // data: JSON.stringify(jsonInput),
                contentType: 'application/json; charset=utf-8',
                beforeSend: function () {
                },
                success: function (result) {

                    if (result.success == true) {
                        fResult = true;
                        logMessage('Start Scan :: Done ' + rowFrom, 'info');
                    }
                    else {
                        logMessage('Start Scan :: ' + result.errMessage, 'alert');
                    }
                },
                error: function (error) {
                    logMessage('Start Scan :: ' + error.val, 'alert');
                }
            });

            return fResult;
        }

        async function readPulses(iCol, rowFrom) {
            var fResult = false;

            await $.ajax({
                url: "/api/PLCSlot/ReadPulse/" + iCol + "/" + rowFrom,
                type: "GET",
                headers: {
                    'Authorization': 'Bearer ' + token
                },
                dataType: 'JSON',
                // data: JSON.stringify(jsonInput),
                contentType: 'application/json; charset=utf-8',
                beforeSend: function () {
                },
                success: function (result) {

                    if (result.success == true) {
                        fResult = true;

                        document.getElementById('R' + rowFrom).innerHTML = result.data;
                        logMessage('Read :: Done ' + result.data, 'info');

                        rowFrom = Number(rowFrom) + 1;
                        $('#txtRow').val(rowFrom);
                    }
                    else {
                        logMessage('Read :: ' + result.errMessage, 'alert');
                    }
                },
                error: function (error) {
                    logMessage('Read :: ' + error.val, 'alert');
                }
            });

            return fResult;
        }

        $('#list1Table').on('click', '#btnUpdate', function () {
            const data = JSON.parse($(this).attr('data-row').replace(/&quot;/g, '"'));
            updateForm(data);
        });

        $('#list2Table').on('click', '#btnUpdate', function () {
            const data = JSON.parse($(this).attr('data-row').replace(/&quot;/g, '"'));
            updateForm(data);
        });

        $('#list3Table').on('click', '#btnUpdate', function () {
            const data = JSON.parse($(this).attr('data-row').replace(/&quot;/g, '"'));
            updateForm(data);
        });

        $('#list4Table').on('click', '#btnUpdate', function () {
            const data = JSON.parse($(this).attr('data-row').replace(/&quot;/g, '"'));
            updateForm(data);
        });

        $('#list5Table').on('click', '#btnUpdate', function () {
            const data = JSON.parse($(this).attr('data-row').replace(/&quot;/g, '"'));
            updateForm(data);
        });

        function updateForm(data) {
            $("#txtId").val(data.slot_Id);
            $("#txtRowNo").val(data.rowNo);
            if (data.isActive == "true") {
                document.getElementById("chkIsActive").checked = true;
            }
            else {
                document.getElementById("chkIsActive").checked = false;
            }
            if (data.forEmptyTray == "true") {
                document.getElementById("chkForEmptyTray").checked = true;
            }
            else {
                document.getElementById("chkForEmptyTray").checked = false;
            }
            if (data.hasEmptyTray == "true") {
                document.getElementById("chkHasEmptyTray").checked = true;
            }
            else {
                document.getElementById("chkHasEmptyTray").checked = false;
            }
            if (data.hasReel == "true") {
                document.getElementById("chkHasReel").checked = true;
            }
            else {
                document.getElementById("chkHasReel").checked = false;
            }
            $("#txtReelNo").val(data.reelNo);
            $("#txtPriority").val(data.priority);
            $("#myModal").modal("show");
        }

        function updateSlotStatus() {
            const chkIsAct = document.querySelector('#chkIsActive');
            const chkForEmptyTray = document.querySelector('#chkForEmptyTray');
            const chkHasEmptyTray = document.querySelector('#chkHasEmptyTray');
            const chkHasReel = document.querySelector('#chkHasReel');

            var data = {
                Slot_Id: $("#txtId").val(),
                IsActive: chkIsAct.checked ? true : false,
                ForEmptyTray: chkForEmptyTray.checked ? true : false,
                HasEmptyTray: chkHasEmptyTray.checked ? true : false,
                HasReel: chkHasReel.checked ? true : false,
                ReelNo: $("#txtReelNo").val(),
                RowNo: $("#txtRowNo").val(),
            }

            //console.log(JSON.stringify(data));

            $.ajax({
                url: '/Slot/UpdateSlotStatus',
                type: 'POST',
                data: JSON.stringify(data),
                dataType: 'JSON',
                contentType: 'application/json; charset=utf-8',
                beforeSend: function () {
                    Swal.fire({
                        text: 'Please Wait',
                        width: '300px',

                        allowEscapeKey: false,
                        allowOutsideClick: false,
                        showConfirmButton: false,
                    });
                    Swal.showLoading()
                },
                success: function (result) {
                    // console.log(result);
                    if (result.success == true) {
                        $("#myModal").modal("toggle");
                        swal.fire({
                            icon: 'success',
                            title: "Success Update",
                            text: "",
                            didClose: () => {
                              window.location.reload();
                            }
                        });
                    }
                    else {
                        swal.fire({
                            icon: 'error',
                            title: "Wait",
                            text: result.errMessage
                        });
                    }
                },
                error: function (error) {
                    console.log(error);
                    swal.fire({
                        icon: 'error',
                        title: "Wait",
                        text: error.val
                    });
                }
            });

            // console.log(id);
        }

        function cancelForm() {
            $("#myModal").modal("toggle");
        }


    </script>
}
