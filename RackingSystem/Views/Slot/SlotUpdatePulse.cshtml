<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Update Slot</h4>
            </div>
            @* <form action="/bin/SaveBin" method="post"> *@
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label" for="txtRowNo">Row No</label>
                    <input type="text" class="form-control" name="RowNo" id="txtRowNo" aria-describedby="Row No" disabled>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="txtPriority">Priority</label>
                    <input type="number" class="form-control" name="RowNo" id="txtPriority" aria-describedby="Priority">
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="chkIsActive">
                    <label class="form-check-label" for="chkIsActive">Is Active</label>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="chkForEmptyTray">
                    <label class="form-check-label" for="chkForEmptyTray">For Empty Tray</label>
                </div>
                <div class="mb-3 form-check">
