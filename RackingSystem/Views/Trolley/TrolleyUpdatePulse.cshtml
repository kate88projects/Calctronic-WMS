                },
                success: function (result) {

                    if (result.success == true) {
                        fResult = true;

                        document.getElementById(iCol + 'R' + rowFrom).innerHTML = result.data;
                        logMessage('Read :: Done ' + result.data, 'info');

                        rowFrom = Number(rowFrom) + 1;
                        $('#txtRow').val(rowFrom);
                    }
                    else {
                        logMessage('Read :: ' + result.errMessage, 'alert');
                    }
                },
                error: function (error) {
                    logMessage('Read :: ' + error.val, 'alert');
                }
            });

            return fResult;
        }

