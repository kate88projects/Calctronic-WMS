@section PageHeader {
    <header class="d-flex align-items-center justify-content-between w-100">
        <h2 class="pageTitle">Trolley Update Pulses</h2>
    </header>
}

<div class="container-fluid">
    <br />

    <input type="hidden" id="xToken" value="@ViewBag.xToken" autocomplete="off">
    <input id="chkCont" type="checkbox" class="" style="display:none;" />

    <div class="row" style="padding:5px;">
        <div class="col-sm-3" style="">
            <div class="row">
                <div class="col-4" style="padding:0;">
                    <label>Column : </label>
                </div>
                <div class="col-4" style="padding:0;">
                    <input id="txtSide" type="text" class="form-control" style="" placeholder="Side" />
                </div>
                <div class="col-4" style="padding:0;">
                    <input id="txtCol" type="number" class="form-control" style="" placeholder="Col No" />
                </div>
            </div>
        </div>
        <div class="col-sm-3" style="">
            <div class="row">
                <div class="col-4" style="padding:0;">
                    <label for="txtRow">From Row : </label>
                </div>
                <div class="col-8" style="padding:0;">
                    <input id="txtRow" type="number" class="form-control" style="" placeholder="Row No" />
                </div>
            </div>
        </div>
        <div class="col-sm-6" style="">
            <div class="row" style="padding-left:10px;">
                <div class="col-3" style="padding:0;">
                    <button type="button" class="btn btn-primary" style="width:90%;" onclick="loadList()"><i class="bi bi-search"></i> Generate </button>
                </div>
                <div class="col-3" style="padding:0;">
                    <button class="btn btn-success" style="width:90%;" onclick="getQRPulses()" id="start-btn"> Start Scan </button>
                </div>
                <div class="col-3" style="padding:0;">
                    <button class="btn btn-success" style="width:90%;" onclick="getContQRPulses()" id="start-btn"> Start Cont. Scan </button>
                </div>
                <div class="col-3" style="padding:0;">
                    <button class="btn btn-danger" style="width:90%;" onclick="stopGet()" id="stop-btn"> Stop Scan </button>
                </div>
            </div>
        </div>
    </div>

    <hr />

    <!-- Status -->
    <div class="status-grid">
        <div class="status-card">
            <h3>Status</h3>
            <div class="value" id="txtIdle">Stop</div>
        </div>
        <div class="status-card">
            <h3>Current Row</h3>
            <div class="value" id="txtCurRow">–</div>
        </div>
        <div class="status-card">
            <h3>Pulses Read</h3>
            <div class="value" id="txtRead">0</div>
        </div>
        <div class="status-card">
            <h3>Errors</h3>
            <div class="value" id="txtErr" style="color: darkred;">-</div>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-2">
            <table class="table table-striped table-hover" id="list1Table">
                <tbody id="list1TableBody"></tbody>
            </table>
        </div>
        <div class="col-2">
            <table class="table table-striped table-hover" id="list2Table">
                <tbody id="list2TableBody"></tbody>
            </table>
        </div>
        <div class="col-2">
            <table class="table table-striped table-hover" id="list3Table">
                <tbody id="list3TableBody"></tbody>
            </table>
        </div>
        <div class="col-6">
            <div id="system-log" style="border: 1px solid lightgrey;">
                <!-- Log entries will be appended here by JavaScript -->
            </div>
        </div>
    </div>

</div>

