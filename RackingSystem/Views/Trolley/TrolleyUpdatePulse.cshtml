                        fResult = true;
                        const cell = document.getElementById(iCol + 'R' + rowFrom);

                        cell.textContent = result.data;
                        const [qrx, qry] = result.data.split(',').map(v => v.trim());
                        document.getElementById("pulseXValue").textContent = qrx;
                        document.getElementById("pulseZValue").textContent = qry;
                        logMessage('Read :: Done ' + result.data, 'info');

                        rowFrom = Number(rowFrom) + 1;
                        $('#txtRow').val(rowFrom); 
                        getPulsesIncrement(cell.dataset.trolleySlotId);
                    }
                    else {
                        logMessage('Read :: ' + result.errMessage, 'alert');
                    }
                },
                error: function (error) {
                    logMessage('Read :: ' + error.val, 'alert');
                }
            });

            return fResult;
        }

