        async function getPulsesAuto() {
            if (endTask == true) { return; }
            if (runningTask == true) { return; }

            var iCol = Number($('#txtCol').val());
            var rowFrom = Number($('#txtRow').val());


            if (rowFrom >= 51) {
                console.log('RF:51');
                $('#txtRow').val(51);
                stop();
                return;
            }

            runningTask = true;
            var r = await startScanPulses(iCol, rowFrom);
            if (r == false) {
                r = await startScanPulses(iCol, rowFrom);
                if (r == false) {
                    stop();
                    return;
                }
            }

            await delay(1000);

            if (r == true) {
                var r2 = await readPulses(iCol, rowFrom);
                if (r2 == false) {
                    r2 = await readPulses(iCol, rowFrom);
                    if (r2 == false) {
                        stop();
                        return;
                    }
                }
            }
            runningTask = false;

            const chkCont = document.getElementById('chkCont');
            if (chkCont.checked == false) {
                console.log('chkCont');
                stop();
                return;
            }
        }

        async function startScanPulses(iCol, rowFrom) {
            var fResult = false;
            var s = $('#txtSide').val();

            if (rowFrom >= 51) {
                return false;
            }

            await $.ajax({
                url: "/api/PLCSlot/SetScanTrolleyPulseStart/" + s + "/" + iCol + "/" + rowFrom,
                type: "GET",
                headers: {
                    'Authorization': 'Bearer ' + token
                },
                dataType: 'JSON',
                // data: JSON.stringify(jsonInput),
                contentType: 'application/json; charset=utf-8',
                beforeSend: function () {
                },
                success: function (result) {

                    if (result.success == true) {
                        fResult = true;
                        logMessage('Start Scan :: Done ' + rowFrom, 'info');
                    }
                    else {
                        logMessage('Start Scan :: ' + result.errMessage, 'alert');
                    }
                },
                error: function (error) {
                    logMessage('Start Scan :: ' + error.val, 'alert');
                }
            });

            return fResult;
        }

        async function readPulses(iCol, rowFrom) {
            var fResult = false;
            var s = $('#txtSide').val();

            await $.ajax({
                url: "/api/PLCSlot/ReadTrolleyPulse/" + s + "/" + iCol + "/" + rowFrom,
