                        const preQRZ = result.data.lastQRYPulse;
                        const curQRX = result.data.qrxPulse;
                        const curQRZ = result.data.qryPulse;

                        const xDiff = calculateDiff(preQRX, curQRX);
                        const zDiff = calculateDiff(preQRZ, curQRZ);

                        const pulseXDiff = document.getElementById("pulseXDiff");
                        pulseXDiff.textContent = xDiff.text;
                        pulseXDiff.className = `pulse-diff ms-2 ${xDiff.className}`;

                        const pulseZDiff = document.getElementById("pulseZDiff");
                        pulseZDiff.textContent = zDiff.text;
                        pulseZDiff.className = `pulse-diff ms-2 ${zDiff.className}`;
                    }
                },
                error: function (error) {
                    console.log(error);
                    swal.fire({
                        icon: 'error',
                        title: "Wait",
                        text: error.val
                    });
                }
            });
        }

        function calculateDiff(previous, current) {
            if (previous === 0) {
                return { text: "(0)", className: "diff-same" };
            }

            const diff = current - previous;
            if (diff > 0) {
                return {
                    text: `(+${diff})`,
                    className: "diff-up"
                };
            }

            if (diff < 0) {
                return {
                    text: `(${diff})`,
                    className: "diff-down"
                };
            }
            return { text: "(0)", className: "diff-same" };
        }

