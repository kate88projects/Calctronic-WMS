@section PageHeader {
    <header class="d-flex align-items-center justify-content-between w-100">
        <h2 class="pageTitle">Trolley Detail List</h2>
        <div class="d-flex gap-2">
            <button type="button" class="btn btn-warning" onclick="export()">
                Export
            </button>
        </div>
    </header>
}

<div class="container-fluid">
    <br />

    <input type="hidden" id="xToken" value="@ViewBag.xToken" autocomplete="off">

    <div class="row" style="padding:5px;">
        @* <div class="col-sm-4" style=""></div>
            <div class="col-sm-4" style=""></div> *@
        <div class="col-sm-4" style="">
            <div class="row">
                <div class="col-3" style="padding:0; align-content: center;">
                    @* <select id="selDateType" name="DateType" class="form-control">
                            <option value="25">25</option>
                            <option value="50">50</option>
                        </select> *@
                    <label>Trolley : </label>
                </div>
                <div class="col-5" style="padding:0;">
                    @* <input id="txtTrolley" type="text" class="form-control" style="" placeholder="Trolley" /> *@
                    <select id="txtTrolley" class="form-control">
                        <option value="1">Trolley1A</option>
                    </select>
                </div>
                <div class="col-4" style="padding:0;">
                    <button type="button" class="btn btn-primary" style="width:100%;" onclick="loadList()"><i class="bi bi-search"></i> </button>
                </div>
            </div>
        </div>
    </div>
    <hr />

    <!-- Status -->
    <div class="status-grid">
        <div class="status-card">
            <h3>Item Group</h3>
            <div class="value" id="txtGroup">-</div>
        </div>
        <div class="status-card">
            <h3>Need Checking</h3>
            <div class="value" id="txtCheck">–</div>
        </div>
        <div class="status-card">
            <h3>Side A</h3>
            <div class="value" id="txtTtlReelA">Total Reel : -</div>
            <div class="value" id="txtTtlEmptyA">Empty Slot : 0 / 150</div>
        </div>
        <div class="status-card">
            <h3>Side B</h3>
            <div class="value" id="txtTtlReelB">Total Reel : -</div>
            <div class="value" id="txtTtlEmptyB">Empty Slot :  0 / 150</div>
        </div>
    </div>

    <hr />

    <table id="listTable" class="row-border dataTable hover order-column" style="width:100%">
        <thead>
            <tr>
                <th>Slot</th>
                <th>Reel Code</th>
                <th>Item Code</th>
                <th>Qty</th>
                <th>Check?</th>
                <th>Action</th>
            </tr>
        </thead>
    </table>


</div>

@section Scripts
{
    <link rel="stylesheet" href="~/css/sweetalert2.min.css">
    <link rel="stylesheet" href="~/css/dataTables.dataTables.css">
    <link rel="stylesheet" href="~/css/columnControl.dataTables.css">

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="../js/dataTables.js"></script>
    <script src="../js/dataTables.columnControl.js"></script>
    <script src="../js/columnControl.dataTables.js"></script>
    <script src="~/js/sweetalert2.all.min.js"></script>

    @* <script src="~/js/gridjs.umd.js"></script> *@
    @* <script src="~/js/datatables.min.js"></script> *@
    @* <link rel="stylesheet" href="~/css/gridjs.min.css"> *@

    <script type="text/javascript">
        $(document).ready(function () {
            loadList();
        });

        function loadList() {
            var id = document.getElementById("txtTrolley").value; //$('#txtTrolley').val();

            $.ajax({
                url: "/Trolley/GetTrolleyDetailList?id=" + id,
                type: "GET",
                dataType: 'JSON',
                contentType: 'application/json; charset=utf-8',
                beforeSend: function () {
                    Swal.fire({
                        text: 'Please Wait',
                        width: '300px',
                        allowEscapeKey: false,
                        allowOutsideClick: false,
                        showConfirmButton: false,
                    });
                    Swal.showLoading();
                },
                success: function (result) {
                    swal.close();
                    if (result.success == true) {
                        var spText = result.errStackTrace.split(',');
                        document.getElementById('txtGroup').innerHTML = spText[0];
                        document.getElementById('txtCheck').innerHTML = spText[1];
                        document.getElementById('txtTtlReelA').innerHTML = 'Total Reel : ' + spText[2];
                        document.getElementById('txtTtlEmptyA').innerHTML = 'Empty Slot : ' + spText[3] + " ";
                        document.getElementById('txtTtlReelB').innerHTML = 'Total Reel : ' + spText[4];
                        document.getElementById('txtTtlEmptyB').innerHTML = 'Empty Slot : ' + spText[5] + " ";

                        $('#listTable').DataTable( {
                            data: result.data,
                            paging: true,
                            pageLength: 50,
                            lengthMenu: [50, 100, 250, 500, 1000],
                            "bDestroy": true,
                            columns: [
                                { data: 'trolleySlotCode' },
                                { data: 'reelCode' },
                                {
                                    data: null,
                                    render: function (data, type, row, meta) {
                                        // return '<p>' + row.itemCode + '</p><p>' + row.itemDesc + '</p>';
                                        return '<p style="margin:0;"><span>' + row.itemCode + '</span><br/>' +
                                        '<span style="font-size:13px;color:grey;">' + row.itemDesc + '</span></p>';
                                    }
                                },
                                { data: 'qty' },
                                {
                                    data: null,
                                    render: function (data, type, row, meta) {
                                        if (row.needCheck == true) {
                                            return '<span class="badge rounded-pill bg-warning" style="font-size:13px;">Need Check</span>'
                                        }
                                        else {
                                            return ''
                                        }
                                    }
                                },
                                {
                                    data: null,
                                    render: function (data, type, row, meta) {
                                        const rowData = JSON.stringify(row).replace(/"/g, "&quot;");
                                        return `<div style="display:flex;">
                                            <button class="btn btn-warning d-grid edit-btn" style="margin-right:10px;" data-row="${rowData}">
                                                <span><i class="bi bi-pencil-square"></i> </span></button>`;
                                    }
                                }
                            ],
                            language: {
                                searchPlaceholder: "🔍︎ Search",
                                search: ""
                            },
                            ordering: {
                                indicators: false
                            },
                            columnControl: ['orderStatus']
                        });

                    }
                    else {
                        swal.fire({
                            icon: 'error',
                            title: "Wait",
                            text: result.errMessage
                        });
                    }
                },
                error: function (error) {
                    swal.fire({
                        icon: 'error',
                        title: "Wait",
                        text: error.val
                    });
                }
            });
        }

    </script>
}