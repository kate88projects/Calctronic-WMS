@section Scripts
{
    <link rel="stylesheet" href="~/css/sweetalert2.min.css">
    <link rel="stylesheet" href="~/css/dataTables.dataTables.css">
    <link rel="stylesheet" href="~/css/columnControl.dataTables.css">

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="../js/dataTables.js"></script>
    <script src="../js/dataTables.columnControl.js"></script>
    <script src="../js/columnControl.dataTables.js"></script>
    <script src="~/js/sweetalert2.all.min.js"></script>

    @* <script src="~/js/gridjs.umd.js"></script> *@
    @* <script src="~/js/datatables.min.js"></script> *@
    @* <link rel="stylesheet" href="~/css/gridjs.min.css"> *@

    <script type="text/javascript">
        let itemGroupList = {};
        let activeGrp = null;
        let globalData = null;

        $(document).ready(function () {
            loadTrolley();
            // loadList();
        });

        function loadTrolley() {
            $.ajax({
                url: "/Trolley/GetTrolleyList/",
                type: "GET",
                dataType: 'JSON',
                contentType: 'application/json; charset=utf-8',
                success: function (result) {
                    swal.close()
                    if (result.success == true) {
                        const dropdown = document.getElementById('selTrolley');
                        dropdown.innerHTML = "";

                        result.data.forEach((i, index) => {
                            const option = document.createElement("option");
                            option.value = i.trolley_Id;
                            option.textContent = i.trolleyCode;
                            if (index === 0) {
                                option.selected = true;
                            }
                            dropdown.appendChild(option);
                        });

                        loadList();
                    }
                },
                error: function (error) {
                    swal.fire({
                        icon: 'error',
                        title: "Wait",
                        text: error.val
                    });
                }
            });
        }

        function loadList() {
            const id = document.getElementById('selTrolley').value;

            $.ajax({
                url: "/Trolley/GetTrolleyDetailList?id=" + id,
                type: "GET",
                dataType: 'JSON',
                contentType: 'application/json; charset=utf-8',
                beforeSend: function () {
                    Swal.fire({
                        text: 'Please Wait',
                        width: '300px',
                        allowEscapeKey: false,
                        allowOutsideClick: false,
                        showConfirmButton: false,
                    });
                    Swal.showLoading();
                },
                success: function (result) {
                    swal.close();
                    if (result.success == true) {
                        globalData = result.data;
                        console.log(result);
                        itemGroupList = {};

                        result.data.forEach(item => {
                            if (!itemGroupList[item.itemGroupCode]) {
                                itemGroupList[item.itemGroupCode] = 0;
                            }
                            
                            itemGroupList[item.itemGroupCode] += 1;
                        });
                        renderGroupButton();
                        
                        document.getElementById('txtCheck').innerHTML = result.errStackTrace;
                        result.errList.forEach(item => {
                            const parts = item.split(',');
                            const side = parts[0];
                            const col = parts[1];
                            const sidePrefix = side === 'A' ? 'A' : 'B';
                            const reelId = `totalReels${sidePrefix}${col}`;
                            const balancedId = `balanced${sidePrefix}${col}`;
                            const usedId = `used${sidePrefix}${col}`;
                            const totalId = `total${sidePrefix}${col}`;

                            document.getElementById(reelId).textContent = parts[2] + " reels";
                            document.getElementById(balancedId).textContent = parts[3] + " slots";;
                            document.getElementById(usedId).textContent = (parseInt(parts[5]) - parseInt(parts[3])) + " slots";
                            document.getElementById(totalId).textContent = parts[3] + " slots";
                        });
                        // var spText = result.errStackTrace.split(',');
                        // document.getElementById('txtTtlReelA').innerHTML = 'Total Reel : ' + spText[2];
                        // document.getElementById('txtTtlEmptyA').innerHTML = 'Empty Slot : ' + spText[3] + " ";
                        // document.getElementById('txtTtlReelB').innerHTML = 'Total Reel : ' + spText[4];
                        // document.getElementById('txtTtlEmptyB').innerHTML = 'Empty Slot : ' + spText[5] + " ";

                        $('#listTable').DataTable( {
                            data: result.data,
                            paging: true,
                            pageLength: 50,
                            lengthMenu: [50, 100, 250, 500, 1000],
                            "bDestroy": true,
                            columns: [
                                { data: 'trolleySlotCode' },
                                { data: 'reelCode' },
                                {
                                    data: null,
                                    render: function (data, type, row, meta) {
                                        // return '<p>' + row.itemCode + '</p><p>' + row.itemDesc + '</p>';
                                        return '<p style="margin:0;"><span>' + row.itemCode + '</span><br/>' +
                                        '<span style="font-size:13px;color:grey;">' + row.itemDesc + '</span></p>';
                                    }
                                },
                                { data: 'qty' },
                                {
                                    data: null,
                                    render: function (data, type, row, meta) {
                                        if (row.needCheck == true) {
                                            return '<span class="badge rounded-pill bg-warning" style="font-size:13px;">Need Check</span>'
                                        }
                                        else {
                                            return ''
                                        }
                                    }
                                },
                                { data: 'itemGroupCode', visible: false },
                                {
                                    data: null,
                                    render: function (data, type, row, meta) {
                                        const rowData = JSON.stringify(row).replace(/"/g, "&quot;");
                                        return `<div style="display:flex;">
                                            <button class="btn btn-warning d-grid edit-btn" style="margin-right:10px;" data-row="${rowData}">
                                                <span><i class="bi bi-pencil-square"></i> </span></button>`;
                                    }
                                }
                            ],
                            language: {
                                searchPlaceholder: "🔍︎ Search",
                                search: ""
                            },
                            ordering: {
                                indicators: false
                            },
                            columnControl: ['orderStatus']
                        });

                    }
                    else {
                        swal.fire({
                            icon: 'error',
                            title: "Wait",
                            text: result.errMessage
                        });
                    }
                },
                error: function (error) {
                    swal.fire({
                        icon: 'error',
                        title: "Wait",
                        text: error.val
                    });
                }
            });
        }
        
        function renderGroupButton() {
            const container = document.getElementById('itemGroupContainer');
            container.innerHTML = "";

            Object.keys(itemGroupList).forEach((ig, index) => {
                const btn = document.createElement("button");
                btn.className = "group-reel-btn text-dark fw-bold";
                btn.dataset.group = ig;
                btn.id= `btnGroup${index}`;

                const qty = itemGroupList[ig];

                btn.innerHTML = `
                    ${ig}
                    <span class="fs-7 text-muted" id="txtGroup{index +1}">${qty} reels</span
                `;

                container.appendChild(btn);
            });
        }

        $(document).on('click', '.group-reel-btn', function() {
            const group = $(this).data('group');
            console.log("group", group);

            const table = $('#listTable').DataTable();

            if (activeGrp === group) {
                activeGrp = null;
                $('.group-reel-btn').removeClass('active');
                table.clear();
                table.rows.add(globalData);
                table.draw();
                return;
            }

            activeGrp = group;
            $('.group-reel-btn').removeClass('active');
            $(this).addClass('active');

            const filteredData = globalData.filter(x => x.itemGroupCode == group);
            console.log("filteredData", filteredData);
            table.clear();
            table.rows.add(filteredData);
            table.draw();
        });

    </script>
}