        function updateForm(row, side) {
            $("#txtId").val(row.trolleySlot_Id);
            $("#txtSide").val(side);
            $("#txtRowNo").val(row.rowNo);
            if (row.isActive == true) {
                document.getElementById("chkIsActive").checked = true;
            }
            else {
                document.getElementById("chkIsActive").checked = false;
            }
            if (row.hasReel == true) {
                document.getElementById("chkHasReel").checked = true;
            }
            else {
                document.getElementById("chkHasReel").checked = false;
            }
            $("#txtReelNo").val(row.reelNo);
            $("#txtPriority").val(row.priority);
            $("#txtReelCode").val(row.reelCode);
            $("#myModal").modal("show");
        }

        function updateSlotStatus() {
            const chkIsAct = document.querySelector('#chkIsActive');
            const chkHasEmptyTray = document.querySelector('#chkHasEmptyTray');
            const chkHasReel = document.querySelector('#chkHasReel');

            var data = {
                Slot_Id: $("#txtId").val(),
                RowNo: Number($("#txtRowNo").val()),
                Priority: Number($("#txtPriority").val()),
                IsActive: chkIsAct.checked ? true : false,
                HasReel: chkHasReel.checked ? true : false,
                ReelNo: $("#txtReelNo").val(),
                ReelCode: $("#txtReelCode").val(),
            }

            //console.log(JSON.stringify(data));

            $.ajax({
                url: '/Trolley/UpdateTrolleySlotStatus',
                type: 'POST',
                data: JSON.stringify(data),
                dataType: 'JSON',
                contentType: 'application/json; charset=utf-8',
                beforeSend: function () {
                    Swal.fire({
                        text: 'Please Wait',
                        width: '300px',

                        allowEscapeKey: false,
                        allowOutsideClick: false,
                        showConfirmButton: false,
                    });
                    Swal.showLoading()
                },
                success: function (result) {
                    // console.log(result);
                    if (result.success == true) {
                        $("#myModal").modal("toggle");
                        swal.fire({
                            icon: 'success',
                            title: "Success Update",
                            text: "",
                            didClose: () => {
                              window.location.reload();
                            }
                        });
                    }
                    else {
                        swal.fire({
                            icon: 'error',
                            title: "Wait",
                            text: result.errMessage
                        });
                    }
                },
                error: function (error) {
                    console.log(error);
                    swal.fire({
                        icon: 'error',
                        title: "Wait",
                        text: error.val
                    });
                }
            });

            // console.log(id);
        }

        function cancelForm() {
            $("#myModal").modal("toggle");
        }

    </script>
}
