                    Swal.fire({
                        text: 'Please Wait',
                        width: '300px',

                        allowEscapeKey: false,
                        allowOutsideClick: false,
                        showConfirmButton: false,
                    });
                    Swal.showLoading()
                },
                success: function (result) {
                    // console.log(result);
                    swal.close();
                    if (result.success == true) {

                        var idx = 1;
                        for (let iC = 1; iC <= 3; iC++) {
                            const tbl = document.getElementById('list' + iC + 'Table');
                            const tableBody = document.getElementById('list' + iC + 'TableBody');
