    <script type="text/javascript">

        var autoTimer1;
        var autoTimer2;

        $(document).ready(function () {
            $('#txtTrolley').val('Trolley1A');
            loadListA();
            loadListB();
        });

        function autoChanged() {
            const chkAutoRun = document.getElementById('chkAutoRun')
            if (chkAutoRun.checked) {
                if (autoTimer1 == undefined) {
                    autoTimer1 = setInterval(loadListA, 5000);
                    autoTimer2 = setInterval(loadListB, 5000);
                }
            }
            else {
                if (autoTimer1 != undefined) {
                    clearInterval(autoTimer1);
                    clearInterval(autoTimer2);
                }
            }
        }

        function generate() {
            const chkAutoRun = document.getElementById('chkAutoRun');
            if (chkAutoRun.checked) {
                if (autoTimer1 == undefined) {
                    autoTimer1 = setInterval(loadListA, 5000);
                    autoTimer2 = setInterval(loadListB, 5000);
                }
            }
            else {
                loadListA();
                loadListB();
                if (autoTimer1 != undefined) {
                    clearInterval(autoTimer1);
                    clearInterval(autoTimer2);
                }
            }
        }

        function loadList() {
            loadListA();
            loadListB();
        }

