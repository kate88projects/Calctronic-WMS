<style>
    .table-title {
        color: #fff;
        background: #4b5366;
        border-radius: 3px 3px 0 0;
    }

    .table-title h2 {
        margin: 5px 0 0;
        font-size: 24px;
    }

    .error-message {
        color: red;
        font-size: 0.875rem; 
        margin-top: 5px;
    }

    .is-invalid {
        border-color: red;
    }

    .is-valid {
        border-color: green;
    }

    .row .form-check {
        margin-left: 10px;
    }

    .custom-table thead th {
        background-color: #F1F6F9; 
        color: #000;
    }

    .custom-table tbody tr:hover td {
        background-color: #F1F6F9; 
    }

    .custom-table tbody {
        font-size: 15px;
    }

    .gridjs-pagination {
        font-size: 14px;
    }

