@section PageHeader {
    <header class="d-flex align-items-center justify-content-between w-100">
        <h2 class="pageTitle">BOM List</h2>
        <div class="d-flex gap-2">
            <button type="button" class="btn btn-warning" onclick="downloadTemp()">
                Download Import Template
            </button>
            <button type="button" class="btn btn-primary" onclick="triggerFileInput()">
                Import BOM By Excel
            </button>
            <input type="file" id="fileInput" accept=".xlsx, .xls, .csv" style="display:none;" onchange="handleFileUpload(event)">
            <button type="button" class="btn btn-success" onclick="navigateToNew('new')">
                Add New BOM
            </button>

        </div>
    </header>
}

