        }

        function handleFileUpload(event) {
            const file = event.target.files[0];
            const source = event.target.dataset.source;

            if (!file) return;
            
            const fileExtension = file.name.split('.').pop().toLowerCase();
            if (fileExtension !== 'xlsx' && fileExtension !== 'xls') {
                alert("Only XLSX and XLS files are supported.");
                return;
            }

            const reader = new FileReader();
            reader.onload = function(e) {
                const content = e.target.result;
                originalFileContent = content;
                processFileContent(content, source)
                    .then((excelData) => {
                        saveExcelBOM(excelData);
                    })
                    .catch((err) => {
                        console.error("Error processing the file:", err);
                    })
                    .finally(function() {
                        fileInput.value = '';
                    });
            };
            reader.readAsArrayBuffer(file);
        }

        function processFileContent(arraybuffer, source) {
            const workbook = new ExcelJS.Workbook();
            return workbook.xlsx.load(arraybuffer).then(function() {
                const worksheet = workbook.worksheets[0];

                if (!worksheet) {
                    alert("The upload file appears to be empty.");
                    return;
                }

                const finishedGood = worksheet.getRow(2).getCell(1).value || "";
                const description = worksheet.getRow(2).getCell(2).value || "";

                if (!finishedGood) {
                    alert("Finished Good is missing.");
                    return;
                }

                let headerRow = -1;
                for (let r = 1; r <= 50; r++) {
                    const cellVal = worksheet.getRow(r).getCell(1).value;
                    if (cellVal && String(cellVal).toLowerCase().trim() === "sub item") {
                        headerRow = r;
                        break;
                    }
                }

                if (headerRow === -1) {
                    alert("Invalid template: 'Sub Item' header not found.");
                    return;
                }

                const subItems = [];
                let rowNum = headerRow + 1;
                while (worksheet.getRow(rowNum).getCell(1).value) {
                    subItems.push({
                        ExcelRowNo: rowNum,
                        ItemCode: worksheet.getRow(rowNum).getCell(1).value || "",
                        Quantity: Number(worksheet.getRow(rowNum).getCell(2).value || 0),
                        Remark: String(worksheet.getRow(rowNum).getCell(3).value || "")
                    });
                    rowNum++;
                }

                if (subItems.length === 0) {
                    alert("No sub items found.");
                    return;
                }

                const excelData = {
                    FinishedGoods: finishedGood,
                    Description: description,
                    SubItems: subItems
                };

                console.log("Parsed BOM:", excelData);
                return excelData;
            }).catch(function(err) {
                console.error("Error processing the file:", err);
                throw err;
            });
        }

        function saveExcelBOM(excelData) {
            $.ajax({
                url: '/BOM/SaveExcelBOM',
                type: 'POST',
                data: JSON.stringify(excelData),
                dataType: 'JSON',
                contentType: 'application/json; charset=utf-8',
                beforeSend: function () {
                    Swal.fire({
                        text: 'Please Wait',
                        width: '300px',
                        allowEscapeKey: false,
                        allowOutsideClick: false,
                        showConfirmButton: false,
                    });
                    Swal.showLoading()
                },
                success: function (result) {
                    console.log(result);

                    if (result.success == true) {
                        swal.fire({
                            icon: 'success',
                            title: "Success Update",
                            text: "",
                            didClose: () => {
                                window.location.reload();
                            }
                        });
                    }
                    else {
                        if (result.data && result.data.subItems.length > 0) {
                            generateErrorExcelFile(originalFileContent, result.data);
                            swal.fire({
                                icon: 'warning',
                                title: "Validation Issues Found",
                                text: "Review on returned file and fix errors."
                            });

                        } else {
                            swal.fire({
                                icon: 'error',
                                title: "Wait",
                                text: result.errMessage
                            });
                        }
                    }
                },
                error: function (error) {
                    console.log(error);
                    swal.fire({
                        icon: 'error',
                        title: "Wait",
                        text: error.val
                    });
                }
            });
        }

        function generateErrorExcelFile(buffer, errorData) {

            const workbook = new ExcelJS.Workbook();
            workbook.xlsx.load(buffer).then(() => {
                var worksheet = workbook.worksheets[0];
                var headerRowNumber = -1;
                for (let r = 1; r <= 50; r++) {
                    const cellValue = worksheet.getCell(`A${r}`).value;
                    if (cellValue && cellValue.toString().toLowerCase().trim() === "sub item") {
                        headerRowNumber = r;
                        break;
                    }
                }

                if (headerRowNumber === -1) {
                    alert("Header 'sub item' not found");
                    return;
                }

                const headerCell = worksheet.getCell(`D${headerRowNumber}`);
                headerCell.value = "Error Message";
                headerCell.font = { bold: true };

                const errorFill = {
                    type: "pattern",
                    pattern: "solid",
                    fgColor: { argb: "FFFFC7CE" }
                };
                const errorFont = { color: {argb: "FF9C0006" } };

                if (errorData.errorMsg) {
                    const fgErrorCell = worksheet.getCell("D2");
                    fgErrorCell.value = errorData.errorMsg;
                    fgErrorCell.fill = errorFill;
                    fgErrorCell.font = errorFont;
                }
                else 
                {
                    errorData.subItems.forEach(item => {
                        if (item.dtlErrorMsg) {
                            const rowNumber = item.excelRowNo;
                            const cell = worksheet.getCell(`D${rowNumber}`);
                            cell.value = item.dtlErrorMsg;
                            cell.fill = errorFill;
                            cell.font = errorFont;
                        }
                    });
                }

                worksheet.columns = [
                    { width: 20 },
                    { width: 12 },
                    { width: 18 }, 
                    { width: 50 }
                ];

                workbook.xlsx.writeBuffer().then(function(buffer) {
                    const blob = new Blob([buffer], { type: "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" });
                    const link = document.createElement("a");
                    link.href = URL.createObjectURL(blob);
                    link.download = `BOM_IMPORT_ERRORS_${new Date().toISOString().slice(0,10)}.xlsx`;
                    link.click();
                });

            }).catch(err => {
                console.error("Error loading workbook:", err);
            });
        }

