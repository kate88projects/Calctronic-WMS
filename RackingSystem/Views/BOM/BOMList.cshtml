        function downloadTemp() {
            var workbook = new ExcelJS.Workbook();
            workbook.creator = "Flex Software Consulting Sdn Bhd";
            workbook.created = new Date();
            workbook.properties.title = "Template";
            workbook.properties.subject = "Import BOM";

            var worksheet = workbook.addWorksheet("Sheet1");
            var book_header = [
                ["Finished Goods", "Description"],
                [],
                [],
                ["Sub Item", "Qty", "Remark"]
            ];

            book_header.forEach(function(row) {
                worksheet.addRow(row);
            });
            worksheet.columns = [
                { width: 15 },
                { width: 15 },
                { width: 15 }
            ];

            // worksheet.getRow(1).font = { bold: true };
            // worksheet.getRow(4).font = { bold: true };

            workbook.xlsx.writeBuffer().then(function(buffer) {
                var blob = new Blob([buffer], { type: "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" });

                var link = document.createElement("a");
                link.href = URL.createObjectURL(blob);
                link.download = "BOM_TEMPLATE.xlsx";
                link.click();
                URL.revokeObjectURL(link.href);
            }).catch(function(err) {
                console.error("Error creating Excel file:", err);
            });
        }

        function triggerFileInput() {
            const input = document.getElementById('fileInput');
